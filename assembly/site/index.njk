---
layout: layouts/base.njk                                                                                                                                                                     {# Базовый лейаут страницы #}
pagination:                                                                                                                                                                                  {# Генерация по списку локалей #}
  data: locales                                                                                                                                                                              {# Источник локалей #}
  size: 1                                                                                                                                                                                    {# По одной странице на локаль #}
  alias: locale                                                                                                                                                                              {# Имя переменной локали #}
permalink: "{% if locale == 'ru' %}/index.html{% else %}/frontend/{{ locale }}/index.html{% endif %}"                                                                                      {# Разные URL для RU/прочих #}
eleventyComputed:                                                                                                                                                                            {# Вычисляемые поля мета #}
  title: "{{ i18n[locale].title }}"                                                                                                                                                        {# Заголовок из словаря #}
  description: "{{ i18n[locale].description }}"                                                                                                                                            {# Описание из словаря #}
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"                                                                                                             {# Направление текста #}
---

{% set heading = i18n[locale].heading %}                                                                                                                                                     {# Заголовок H1 #}
{% set subheading = i18n[locale].subheading %}                                                                                                                                               {# Подзаголовок #}
{% set cookieNotice = i18n[locale].cookie.text %}                                                                                                                                            {# Текст cookie‑уведомления #}
{% set acceptLabel = i18n[locale].cookie.accept %}                                                                                                                                            {# Текст кнопки согласия #}
{% set declineLabel = i18n[locale].cookie.decline %}                                                                                                                                          {# Текст кнопки отказа #}

<div class="container search-card">                                                                                                                                                        {# Карточка поиска #}
  <div class="main-search-container">                                                                                                                                                      {# Внутренний контейнер #}
    <img src="/frontend/images/serpmonn.ico" alt="Serpmonn Logo" class="logo" title="Serpmonn">                                                                                      {# Лого #}
    <div class="gcse-searchbox-only"></div>                                                                                                                                                {# Поисковая форма GCS #}
  </div>
</div>                                                                                                                                                                                       {# Конец карточки поиска #}

<div class="ad-container main-page">                                                                                                                                                        {# Рекламный контейнер #}
  <ins class="mrg-tag" style="display:inline-block;width:auto;height:250px" data-ad-client="ad-1844119" data-ad-slot="1844119"></ins>                                                 {# Плейсмент Mail.ru #}
  <script>(MRGtag = window.MRGtag || []).push({});</script>                                                                                                                                  {# Инициализация рекламы #}
</div>