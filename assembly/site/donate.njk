---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/donate/donate.html{% else %}/frontend/{{ locale }}/donate/donate.html{% endif %}"
eleventyComputed:
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  title: "{{ donate[locale].donate.pageTitle }}"
  description: "{{ donate[locale].donate.ogDescription }}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/frontend/donate/donate.html{% else %}{{ site.baseUrl }}/frontend/{{ locale }}/donate/donate.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Language" content="{{ locale }}">
    <title>{{ donate[locale].donate.pageTitle }}</title>

    <!-- Open Graph -->
    <meta property="og:title" content="{{ donate[locale].donate.ogTitle }}">
    <meta property="og:description" content="{{ donate[locale].donate.ogDescription }}">
    <meta property="og:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">
    <meta property="og:url" content="{{ canonical }}">
    <meta property="og:type" content="website">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ donate[locale].donate.twitterTitle }}">
    <meta name="twitter:description" content="{{ donate[locale].donate.twitterDescription }}">
    <meta name="twitter:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">
    
    <!-- –°—Ç–∏–ª–∏ -->
    <link rel="stylesheet" href="/frontend/styles/donation/donation.css">
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    <link rel="canonical" href="{{ canonical }}">
    
    <!-- Hreflang –¥–ª—è –≤—Å–µ—Ö —è–∑—ã–∫–æ–≤ -->
    {% for loc in locales %}
        {% if loc == 'ru' %}
            <link rel="alternate" href="{{ site.baseUrl }}/frontend/donate/donate.html" hreflang="{{ loc }}" />
        {% else %}
            <link rel="alternate" href="{{ site.baseUrl }}/frontend/{{ loc }}/donate/donate.html" hreflang="{{ loc }}" />
        {% endif %}
    {% endfor %}
    <link rel="alternate" href="{{ site.baseUrl }}/frontend/donate/donate.html" hreflang="x-default" />
    
    <!-- –°–∫—Ä–∏–ø—Ç—ã -->
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
</head>
<body>

    <div id="preloader" class="preloader">
        <div class="spinner"></div>
        <div class="loader-text">{{ donate[locale].common.loading }}</div>
    </div>

    <main class="about-section">
        <h1>{{ donate[locale].donate.mainTitle }}</h1>
        <p>{{ donate[locale].donate.subtitle }}</p>

        <!-- –û–±—â–∞—è –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è -->
        <div class="general-instructions">
            <h2>{{ donate[locale].donate.howToSupport }}</h2>
            <ol class="general-steps">
                {% for step in donate[locale].donate.steps %}
                <li><strong>{{ step.label }}</strong> {{ step.text }}</li>
                {% endfor %}
            </ol>
            <p class="note">{{ donate[locale].donate.paymentNote }}</p>
        </div>

        <!-- –°–ø–∏—Å–æ–∫ –º–µ—Ç–æ–¥–æ–≤ –¥–æ–Ω–∞—Ç–∞ -->
        <div class="donation-list">

            <!-- Boosty -->
            <div class="donation-item">
                <div class="donation-info">
                    <span class="donation-method">{{ donate[locale].donate.methods.boosty.type }}</span>
                    <h3>{{ donate[locale].donate.methods.boosty.title }}</h3>
                    <div class="instructions">
                        <ul>
                            {% for instruction in donate[locale].donate.methods.boosty.instructions %}
                            <li>{{ instruction }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="donation-button">
                    <a href="https://boosty.to/serpmonn/donate" target="_blank" class="support-button-counter">
                        {{ donate[locale].donate.methods.boosty.button }}
                    </a>
                </div>
            </div>

            <!-- DonationAlerts -->
            <div class="donation-item">
                <div class="donation-info">
                    <span class="donation-method">{{ donate[locale].donate.methods.donationalerts.type }}</span>
                    <h3>{{ donate[locale].donate.methods.donationalerts.title }}</h3>
                    <div class="instructions">
                        <ul>
                            {% for instruction in donate[locale].donate.methods.donationalerts.instructions %}
                            <li>{{ instruction }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="donation-button">
                    <a href="https://www.donationalerts.com/r/serpmonn" target="_blank" class="support-button-counter">
                        {{ donate[locale].donate.methods.donationalerts.button }}
                    </a>
                </div>
            </div>

            <!-- –¢–∏–Ω—å–∫–æ—Ñ—Ñ -->
            <div class="donation-item">
                <div class="donation-info">
                    <span class="donation-method">{{ donate[locale].donate.methods.tinkoff.type }}</span>
                    <h3>{{ donate[locale].donate.methods.tinkoff.title }}</h3>
                    <div class="instructions">
                        <ul>
                            {% for instruction in donate[locale].donate.methods.tinkoff.instructions %}
                            <li>{{ instruction }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="donation-button">
                    <a href="https://www.tbank.ru/cf/3hi697AiFoO" target="_blank" class="support-button-counter">
                        {{ donate[locale].donate.methods.tinkoff.button }}
                    </a>
                </div>
            </div>

            <!-- –ÆMoney -->
            <div class="donation-item">
                <div class="donation-info">
                    <span class="donation-method">{{ donate[locale].donate.methods.yoomoney.type }}</span>
                    <h3>{{ donate[locale].donate.methods.yoomoney.title }}</h3>
                    <div class="instructions">
                        <ul>
                            {% for instruction in donate[locale].donate.methods.yoomoney.instructions %}
                            <li>{{ instruction }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="donation-button">
                    <a href="https://yoomoney.ru/fundraise/1FD2SEEEF7T.260119" target="_blank" class="support-button-counter">
                        {{ donate[locale].donate.methods.yoomoney.button }}
                    </a>
                </div>
            </div>

            <!-- VK –î–æ–Ω–∞—Ç -->
            <div class="donation-item">
                <div class="donation-info">
                    <span class="donation-method">{{ donate[locale].donate.methods.vk.type }}</span>
                    <h3>{{ donate[locale].donate.methods.vk.title }}</h3>
                    <div class="instructions">
                        <ul>
                            {% for instruction in donate[locale].donate.methods.vk.instructions %}
                            <li>{{ instruction }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="donation-button">
                    <a href="https://vk.com/serpmonn_site" target="_blank" class="support-button-counter">
                        {{ donate[locale].donate.methods.vk.button }}
                    </a>
                </div>
            </div>

        </div>

        <!-- –°–µ–∫—Ü–∏—è "–ö—É–¥–∞ –∏–¥—É—Ç –¥–æ–Ω–∞—Ç—ã" -->
        <div class="donation-purpose">
            <h2>üí∞ {{ donate[locale].donate.purpose.title }}</h2>
            
            <div class="purpose-distribution">
                <div class="purpose-item">
                    <div class="purpose-icon">üñ•Ô∏è</div>
                    <div class="purpose-content">
                        <h3>{{ donate[locale].donate.purpose.server.title }}</h3>
                        <ul class="purpose-details">
                            {% for item in donate[locale].donate.purpose.server.items %}
                            <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                
                <div class="purpose-item">
                    <div class="purpose-icon">üòÑ</div>
                    <div class="purpose-content">
                        <h3>{{ donate[locale].donate.purpose.team.title }}</h3>
                        <ul class="purpose-details">
                            {% for item in donate[locale].donate.purpose.team.items %}
                            <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="thanks-block">
            {{ donate[locale].donate.thanksMessage | safe }}
        </div>
    </main>

    <script>
        window.addEventListener('load', function() {
            document.getElementById('preloader').style.display = 'none';
        });
    </script>
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
</body>
</html>