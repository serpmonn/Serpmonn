---
pagination:
  data: locales
  size: 1
  alias: locale  # –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale
permalink: "{% if locale == 'ru' %}/frontend/news/news.html{% else %}/frontend/{{ locale }}/news/news.html{% endif %}"
eleventyComputed:
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/frontend/news/news.html{% else %}{{ site.baseUrl }}/frontend/{{ locale }}/news/news.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
  <!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —Å—Ç–∏–ª–µ–π -->
  <link rel="stylesheet" href="/frontend/styles/styles.css">
  <link rel="stylesheet" href="/frontend/styles/base.css">
  <link rel="stylesheet" href="/frontend/styles/menu.css">
  <link rel="stylesheet" href="/frontend/styles/accessibility.css">
  <link rel="stylesheet" href="/frontend/news/news.css">
  
  <!-- –ú–µ—Ç–∞-—Ç–µ–≥–∏ –¥–ª—è SEO –∏ —Å–æ—Ü–∏–∞–ª—å–Ω—ã—Ö —Å–µ—Ç–µ–π -->
  <meta http-equiv="Content-Language" content="{{ locale }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ localesNews[locale].news.title }}</title>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta name="description" content="{{ localesNews[locale].news.metaDescription }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta name="keywords" content="{{ localesNews[locale].news.keywords }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->

  <!-- Open Graph –¥–ª—è —Å–æ—Ü—Å–µ—Ç–µ–π -->
  <meta property="og:title" content="{{ localesNews[locale].news.ogTitle }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta property="og:description" content="{{ localesNews[locale].news.ogDescription }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta property="og:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">
  <meta property="og:url" content="{{ canonical }}">
  <meta property="og:type" content="website">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ localesNews[locale].news.twitterTitle }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta name="twitter:description" content="{{ localesNews[locale].news.twitterDescription }}">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
  <meta name="twitter:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">

  <!-- –ö–∞–Ω–æ–Ω–∏—á–µ—Å–∫–∞—è —Å—Å—ã–ª–∫–∞ -->
  <link rel="canonical" href="{{ canonical }}" />

  <!-- Hreflang –¥–ª—è –≤—Å–µ—Ö —è–∑—ã–∫–æ–≤ -->
  {% for loc in locales %}
    {% if loc == 'ru' %}
      <link rel="alternate" href="{{ site.baseUrl }}/frontend/news/news.html" hreflang="{{ loc }}" />
    {% else %}
      <link rel="alternate" href="{{ site.baseUrl }}/frontend/{{ loc }}/news/news.html" hreflang="{{ loc }}" />
    {% endif %}
  {% endfor %}
  <link rel="alternate" href="{{ site.baseUrl }}/frontend/news/news.html" hreflang="x-default" />

  <!-- Schema.org —Ä–∞–∑–º–µ—Ç–∫–∞ -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "{{ localesNews[locale].news.heroTitle }}",  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    "description": "{{ localesNews[locale].news.metaDescription }}",  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    "inLanguage": "{{ locale }}",  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    "publisher": {
      "@type": "Organization",
      "name": "Serpmonn",
      "logo": {"@type": "ImageObject", "url": "{{ site.baseUrl }}/frontend/images/serpmonn.ico"}
    },
    "mainEntity": {
      "@type": "ItemList",
      "itemListElement": [
        {% for article in localesNews[locale].news.articles %}  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
        {
          "@type": "ListItem",
          "position": {{ loop.index }},
          "item": {
            "@type": "Article",
            "headline": "{{ article.title }}",
            "description": "{{ article.excerpt }}",
            "datePublished": "{{ article.date }}",
            "inLanguage": "{{ locale }}",  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
            "url": "{% if locale == 'ru' %}{{ site.baseUrl }}{{ article.link }}{% else %}{{ site.baseUrl }}/{{ locale }}{{ article.link }}{% endif %}"  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>

  <!-- RSS –ª–µ–Ω—Ç–∞ (–µ—Å–ª–∏ –Ω—É–∂–µ–Ω –æ–±—â–∏–π –¥–ª—è –≤—Å–µ—Ö —è–∑—ã–∫–æ–≤, –æ—Å—Ç–∞–≤–ª—è–µ–º —Ç–∞–∫) -->
  <link rel="alternate" type="application/rss+xml" title="RSS –Ω–æ–≤–æ—Å—Ç–µ–π Serpmonn" href="/frontend/news/rss.xml">
  <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
</head>
<body>
  <!-- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –º–µ–Ω—é -->
  <div id="menuContainer"></div>
  
  <!-- –û—Å–Ω–æ–≤–Ω–æ–π –∫–æ–Ω—Ç–µ–Ω—Ç —Å—Ç—Ä–∞–Ω–∏—Ü—ã -->
  <div class="page">
    <!-- –•–ª–µ–±–Ω—ã–µ –∫—Ä–æ—à–∫–∏ -->
    <div class="breadcrumb">
      <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: —Å—Å—ã–ª–∫–∞ –Ω–∞ –≥–ª–∞–≤–Ω—É—é —Å —É—á–µ—Ç–æ–º —è–∑—ã–∫–∞ -->
      <a href="{% if locale == 'ru' %}/{% else %}/{{ locale }}/{% endif %}">{{ localesNews[locale].news.breadcrumbHome }}</a> ‚Üí  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <span>{{ localesNews[locale].news.breadcrumbNews }}</span>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    </div>

    <!-- –ó–∞–≥–æ–ª–æ–≤–æ–∫ —Ä–∞–∑–¥–µ–ª–∞ —Å —Ä–µ–∫–ª–∞–º–Ω—ã–º –±–∞–Ω–Ω–µ—Ä–æ–º -->
    <div class="news-header">
      <div class="ad-top-banner" style="text-align:center;margin:16px 0;min-height:50px;">
        <script async src="https://ad.mail.ru/static/ads-async.js" defer></script>
        <ins class="mrg-tag" 
            style="display:inline-block;"
            data-ad-client="ad-1897960" 
            data-ad-slot="1897960">
        </ins>
      </div>
      <script>
        (MRGtag = window.MRGtag || []).push({});
      </script>
      
      <!-- –û—Å–Ω–æ–≤–Ω–æ–π –∑–∞–≥–æ–ª–æ–≤–æ–∫ –∏ –ø–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫ -->
      <h1 class="news-title">{{ localesNews[locale].news.heroTitle }}</h1>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <p class="news-subtitle">{{ localesNews[locale].news.heroSubtitle }}</p>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->

      <!-- –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ -->
      <div class="news-stats">
        <div class="stat-item">
          <span class="stat-number">11</span>
          <span class="stat-label">{{ localesNews[locale].news.stats.articles }}</span>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
        </div>
        <div class="stat-item">
          <span class="stat-number">5+</span>
          <span class="stat-label">{{ localesNews[locale].news.stats.categories }}</span>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
        </div>
        <div class="stat-item">
          <span class="stat-number">15+</span>
          <span class="stat-label">{{ localesNews[locale].news.stats.themes }}</span>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
        </div>
      </div>
    </div>

    <!-- –ü—Ä–æ–º–æ-–±–∞–Ω–Ω–µ—Ä —Å —Å—Å—ã–ª–∫–∞–º–∏ –Ω–∞ –¥—Ä—É–≥–∏–µ —Ä–∞–∑–¥–µ–ª—ã -->
    <div class="promo-banner">
      <p>{{ localesNews[locale].news.promoText | safe }}</p>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    </div>

    <!-- –°–µ–∫—Ü–∏—è RSS –∏ —Å–æ—Ü–∏–∞–ª—å–Ω—ã—Ö —Å–µ—Ç–µ–π -->
    <div class="rss-section">
      <h2 class="rss-title">{{ localesNews[locale].news.rssTitle }}</h2>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <p class="rss-description">{{ localesNews[locale].news.rssDescription }}</p>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <!-- –û—Å—Ç–∞–≤–ª—è–µ–º RSS –æ–±—â–∏–º –¥–ª—è –≤—Å–µ—Ö —è–∑—ã–∫–æ–≤, –Ω–æ –º–æ–∂–Ω–æ —Å–¥–µ–ª–∞—Ç—å —è–∑—ã–∫–æ–≤—ã–º -->
      <a href="/frontend/news/rss.xml" class="rss-btn" target="_blank" rel="noopener">{{ localesNews[locale].news.rssButton }}</a>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <div class="social-subscribe">
        <a class="tg-btn" href="https://t.me/serpmonn" target="_blank" rel="noopener">{{ localesNews[locale].news.telegramButton }}</a>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
        <a class="vk-btn" href="https://vk.com/serpmonn_site" target="_blank" rel="noopener">{{ localesNews[locale].news.vkButton }}</a>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      </div>
    </div>

    <!-- –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º -->
    <div class="news-categories">
      {% for category in localesNews[locale].news.categories %}  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <a class="category-link {% if category.key == 'all' %}active{% endif %}" 
         href="{% if locale == 'ru' %}/frontend/news/{% else %}/frontend/{{ locale }}/news/{% endif %}?category={{ category.key }}" 
         data-category="{{ category.key }}">
        {{ category.name }}
      </a>
      {% endfor %}
    </div>

    <!-- –ü–æ–∏—Å–∫ –ø–æ –Ω–æ–≤–æ—Å—Ç—è–º -->
    <div class="search-box">
      <input type="text" class="search-input" placeholder="{{ localesNews[locale].news.searchPlaceholder }}" id="searchInput">  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <div class="search-suggestions" id="searchSuggestions"></div>
    </div>

    <!-- –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏ -->
    <div class="loading-indicator" id="loadingIndicator" style="display: none;">
      <p>{{ localesNews[locale].news.loadingText }}</p>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    </div>

    <!-- –°–µ—Ç–∫–∞ –∫–∞—Ä—Ç–æ—á–µ–∫ –Ω–æ–≤–æ—Å—Ç–µ–π -->
    <div class="news-grid" id="newsGrid">
      {% for article in localesNews[locale].news.articles %}  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <div class="news-card" data-category="{{ article.category }}" data-tags="{{ article.tags }}">
        <div class="news-card-content">
          <span class="news-card-category">{{ article.categoryLabel }}</span>
          <h3 class="news-card-title">{{ article.title }}</h3>
          <p class="news-card-excerpt">{{ article.excerpt }}</p>
          <div class="news-card-meta">
            <span class="news-card-date">{{ article.date }}</span>
            <span class="news-card-read-time">{{ article.readTime }}</span>
          </div>
          <div class="news-card-share">
            <a class="share-btn" href="https://t.me/share/url?url={% if locale == 'ru' %}{{ site.baseUrl }}{{ article.link }}{% else %}{{ site.baseUrl }}/{{ locale }}{{ article.link }}{% endif %}&text={{ article.title | urlencode }}" target="_blank" rel="noopener">üì§</a>
            <a class="share-btn" href="https://vk.com/share.php?url={% if locale == 'ru' %}{{ site.baseUrl }}{{ article.link }}{% else %}{{ site.baseUrl }}/{{ locale }}{{ article.link }}{% endif %}&title={{ article.title | urlencode }}" target="_blank" rel="noopener">üì∑</a>
          </div>
        </div>
        <a class="news-card-link" href="{{ article.link }}" aria-label="{{ article.ariaLabel }}"></a>
      </div>
      {% endfor %}
    </div>

    <!-- –ö–Ω–æ–ø–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã—Ö –Ω–æ–≤–æ—Å—Ç–µ–π -->
    <div class="load-more" id="loadMore">
      <button class="load-more-btn">{{ localesNews[locale].news.loadMoreButton }}</button>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
    </div>
  </div>

  <!-- –ú–æ–±–∏–ª—å–Ω–∞—è —Ä–µ–∫–ª–∞–º–∞ –≤–Ω–∏–∑—É —ç–∫—Ä–∞–Ω–∞ -->
  <div id="mobile-anchor-ad" class="mobile-anchor-ad" style="position:fixed;left:0;right:0;bottom:0;display:none;justify-content:center;z-index:2147483000;padding-bottom: env(safe-area-inset-bottom);pointer-events:none;">
    <div style="pointer-events:auto;background:rgba(255,255,255,.98);box-shadow:0 -2px 10px rgba(0,0,0,.15);border-radius:8px 8px 0 0;padding:6px 10px;display:flex;gap:8px;align-items:center;">
      <button type="button" aria-label="{{ localesNews[locale].news.closeAd }}" onclick="(function(a){ a.style.display='none'; localStorage.setItem('anchor_closed','1');})(document.getElementById('mobile-anchor-ad'))" style="background:none;border:0;font-size:16px;line-height:1;cursor:pointer">‚úï</button>  <!-- –ò–°–ü–†–ê–í–õ–ï–ù–û: lang ‚Üí locale -->
      <ins class="mrg-tag" 
          style="display:inline-block;width:320px;height:50px" 
          data-ad-client="ad-1898031"
          data-ad-slot="1898031">
      </ins>
    </div>
  </div>

  <!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ JavaScript —Ñ–∞–π–ª–æ–≤ -->
  <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
  <script src="/frontend/news/news.js" defer></script>
  <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
  
  <!-- –°–∫—Ä–∏–ø—Ç –¥–ª—è –º–æ–±–∏–ª—å–Ω–æ–π —Ä–µ–∫–ª–∞–º—ã -->
  <script>
    (function(){
      if (localStorage.getItem('anchor_closed')==='1') return;
      var w = window.innerWidth || document.documentElement.clientWidth;
      var a = document.getElementById('mobile-anchor-ad');
      if (!a) return;
      if (w <= 768) { a.style.display = "flex"; }
      (window.MRGtag = window.MRGtag || []).push({});
      if (window.visualViewport) {
        visualViewport.addEventListener('resize', function(){
          var h = visualViewport.height;
          a.style.display = (h < window.innerHeight * 0.8) ? "none" : ( (w <= 768) ? "flex" : "none" );
        });
      }
    })();
  </script>
</body>
</html>