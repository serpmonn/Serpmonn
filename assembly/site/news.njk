  <!-- Open Graph Ð´Ð»Ñ ÑÐ¾Ñ†ÑÐµÑ‚ÐµÐ¹ -->
  <meta property="og:title" content="{{ localesNews[lang].news.ogTitle }}">
  <meta property="og:description" content="{{ localesNews[lang].news.ogDescription }}">
  <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
  {% if lang == 'ru' %}
    <meta property="og:url" content="https://serpmonn.ru/frontend/news/news.html">
  {% else %}
    <meta property="og:url" content="https://serpmonn.ru/frontend/{{ lang }}/news/news.html">
  {% endif %}
  <meta property="og:type" content="website">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ localesNews[lang].news.twitterTitle }}">
  <meta name="twitter:description" content="{{ localesNews[lang].news.twitterDescription }}">
  <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">

  <!-- ÐšÐ°Ð½Ð¾Ð½Ð¸Ñ‡ÐµÑÐºÐ°Ñ ÑÑÑ‹Ð»ÐºÐ° -->
  {% if lang == 'ru' %}
    <link rel="canonical" href="https://serpmonn.ru/frontend/news/news.html" />
  {% else %}
    <link rel="canonical" href="https://serpmonn.ru/frontend/{{ lang }}/news/news.html" />
  {% endif %}

  <!-- Hreflang Ð´Ð»Ñ Ð²ÑÐµÑ… ÑÐ·Ñ‹ÐºÐ¾Ð² -->
  {% for loc in locales %}
    {% if loc == 'ru' %}
      <link rel="alternate" href="https://serpmonn.ru/frontend/news/news.html" hreflang="{{ loc }}" />
    {% else %}
      <link rel="alternate" href="https://serpmonn.ru/frontend/{{ loc }}/news/news.html" hreflang="{{ loc }}" />
    {% endif %}
  {% endfor %}
  <link rel="alternate" href="https://serpmonn.ru/frontend/news/news.html" hreflang="x-default" />

  <!-- Schema.org Ñ€Ð°Ð·Ð¼ÐµÑ‚ÐºÐ° -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "{{ localesNews[lang].news.heroTitle }}",
    "description": "{{ localesNews[lang].news.metaDescription }}",
    "inLanguage": "{{ lang }}",
    "publisher": {
      "@type": "Organization",
      "name": "Serpmonn",
      "logo": {"@type": "ImageObject", "url": "https://serpmonn.ru/frontend/images/serpmonn.ico"}
    },
    "mainEntity": {
      "@type": "ItemList",
      "itemListElement": [
        {% for article in localesNews[lang].news.articles %}
        {
          "@type": "ListItem",
          "position": {{ loop.index }},
          "item": {
            "@type": "Article",
            "headline": "{{ article.title }}",
            "description": "{{ article.excerpt }}",
            "datePublished": "{{ article.date }}",
            "inLanguage": "{{ lang }}",
            "url": "https://serpmonn.ru{% if lang == 'ru' %}{{ article.link }}{% else %}/{{ lang }}{{ article.link }}{% endif %}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>

  <!-- RSS Ð»ÐµÐ½Ñ‚Ð° -->
  <link rel="alternate" type="application/rss+xml" title="RSS Ð½Ð¾Ð²Ð¾ÑÑ‚ÐµÐ¹ Serpmonn" href="/frontend/news/rss.xml">
  <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
</head>
<body>
  <!-- ÐšÐ¾Ð½Ñ‚ÐµÐ¹Ð½ÐµÑ€ Ð´Ð»Ñ Ð¼ÐµÐ½ÑŽ -->
  <div id="menuContainer"></div>
  
  <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ ÐºÐ¾Ð½Ñ‚ÐµÐ½Ñ‚ ÑÑ‚Ñ€Ð°Ð½Ð¸Ñ†Ñ‹ -->
  <div class="page">
    <!-- Ð¥Ð»ÐµÐ±Ð½Ñ‹Ðµ ÐºÑ€Ð¾ÑˆÐºÐ¸ -->
    <div class="breadcrumb">
      <a href="/">{{ localesNews[lang].news.breadcrumbHome }}</a> â†’ 
      <span>{{ localesNews[lang].news.breadcrumbNews }}</span>
    </div>

    <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ñ€Ð°Ð·Ð´ÐµÐ»Ð° Ñ Ñ€ÐµÐºÐ»Ð°Ð¼Ð½Ñ‹Ð¼ Ð±Ð°Ð½Ð½ÐµÑ€Ð¾Ð¼ -->
    <div class="news-header">
      <div class="ad-top-banner" style="text-align:center;margin:16px 0;min-height:50px;">
        <script async src="https://ad.mail.ru/static/ads-async.js" defer></script>
        <ins class="mrg-tag" 
            style="display:inline-block;"
            data-ad-client="ad-1897960" 
            data-ad-slot="1897960">
        </ins>
      </div>
      <script>
        (MRGtag = window.MRGtag || []).push({});
      </script>
      
      <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ Ð·Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ð¸ Ð¿Ð¾Ð´Ð·Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
      <h1 class="news-title">{{ localesNews[lang].news.heroTitle }}</h1>
      <p class="news-subtitle">{{ localesNews[lang].news.heroSubtitle }}</p>

      <!-- Ð¡Ñ‚Ð°Ñ‚Ð¸ÑÑ‚Ð¸ÐºÐ° -->
      <div class="news-stats">
        <div class="stat-item">
          <span class="stat-number">11</span>
          <span class="stat-label">{{ localesNews[lang].news.stats.articles }}</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">5+</span>
          <span class="stat-label">{{ localesNews[lang].news.stats.categories }}</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">15+</span>
          <span class="stat-label">{{ localesNews[lang].news.stats.themes }}</span>
        </div>
      </div>
    </div>

    <!-- ÐŸÑ€Ð¾Ð¼Ð¾-Ð±Ð°Ð½Ð½ÐµÑ€ Ñ ÑÑÑ‹Ð»ÐºÐ°Ð¼Ð¸ Ð½Ð° Ð´Ñ€ÑƒÐ³Ð¸Ðµ Ñ€Ð°Ð·Ð´ÐµÐ»Ñ‹ -->
    <div class="promo-banner">
      <p>{{ localesNews[lang].news.promoText | safe }}</p>
    </div>

    <!-- Ð¡ÐµÐºÑ†Ð¸Ñ RSS Ð¸ ÑÐ¾Ñ†Ð¸Ð°Ð»ÑŒÐ½Ñ‹Ñ… ÑÐµÑ‚ÐµÐ¹ -->
    <div class="rss-section">
      <h2 class="rss-title">{{ localesNews[lang].news.rssTitle }}</h2>
      <p class="rss-description">{{ localesNews[lang].news.rssDescription }}</p>
      <a href="/frontend/news/rss.xml" class="rss-btn" target="_blank" rel="noopener">{{ localesNews[lang].news.rssButton }}</a>
      <div class="social-subscribe">
        <a class="tg-btn" href="https://t.me/serpmonn" target="_blank" rel="noopener">{{ localesNews[lang].news.telegramButton }}</a>
        <a class="vk-btn" href="https://vk.com/serpmonn_site" target="_blank" rel="noopener">{{ localesNews[lang].news.vkButton }}</a>
