    </div>

    <!-- ÐÐ°Ð²Ð¸Ð³Ð°Ñ†Ð¸Ñ Ð¿Ð¾ ÐºÐ°Ñ‚ÐµÐ³Ð¾Ñ€Ð¸ÑÐ¼ -->
    <div class="news-categories">
      {% for category in localesNews[lang].news.categories %}
      <a class="category-link {% if category.key == 'all' %}active{% endif %}" 
         href="{% if lang == 'ru' %}/frontend/news/{% else %}/frontend/{{ lang }}/news/{% endif %}?category={{ category.key }}" 
         data-category="{{ category.key }}">
        {{ category.name }}
      </a>
      {% endfor %}
    </div>

    <!-- ÐŸÐ¾Ð¸ÑÐº Ð¿Ð¾ Ð½Ð¾Ð²Ð¾ÑÑ‚ÑÐ¼ -->
    <div class="search-box">
      <input type="text" class="search-input" placeholder="{{ localesNews[lang].news.searchPlaceholder }}" id="searchInput">
      <div class="search-suggestions" id="searchSuggestions"></div>
    </div>

    <!-- Ð˜Ð½Ð´Ð¸ÐºÐ°Ñ‚Ð¾Ñ€ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ -->
    <div class="loading-indicator" id="loadingIndicator" style="display: none;">
      <p>{{ localesNews[lang].news.loadingText }}</p>
    </div>

    <!-- Ð¡ÐµÑ‚ÐºÐ° ÐºÐ°Ñ€Ñ‚Ð¾Ñ‡ÐµÐº Ð½Ð¾Ð²Ð¾ÑÑ‚ÐµÐ¹ -->
    <div class="news-grid" id="newsGrid">
      {% for article in localesNews[lang].news.articles %}
      <div class="news-card" data-category="{{ article.category }}" data-tags="{{ article.tags }}">
        <div class="news-card-content">
          <span class="news-card-category">{{ article.categoryLabel }}</span>
          <h3 class="news-card-title">{{ article.title }}</h3>
          <p class="news-card-excerpt">{{ article.excerpt }}</p>
          <div class="news-card-meta">
            <span class="news-card-date">{{ article.date }}</span>
            <span class="news-card-read-time">{{ article.readTime }}</span>
          </div>
          <div class="news-card-share">
            <a class="share-btn" href="https://t.me/share/url?url=https://serpmonn.ru{% if lang == 'ru' %}{{ article.link }}{% else %}/{{ lang }}{{ article.link }}{% endif %}&text={{ article.title | urlencode }}" target="_blank" rel="noopener">ðŸ“¤</a>
            <a class="share-btn" href="https://vk.com/share.php?url=https://serpmonn.ru{{ article.link }}&title={{ article.title | urlencode }}" target="_blank" rel="noopener">ðŸ“·</a>
          </div>
        </div>
        <a class="news-card-link" href="{{ article.link }}" aria-label="{{ article.ariaLabel }}"></a>
      </div>
      {% endfor %}
    </div>

    <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ Ð´Ð¾Ð¿Ð¾Ð»Ð½Ð¸Ñ‚ÐµÐ»ÑŒÐ½Ñ‹Ñ… Ð½Ð¾Ð²Ð¾ÑÑ‚ÐµÐ¹ -->
    <div class="load-more" id="loadMore">
