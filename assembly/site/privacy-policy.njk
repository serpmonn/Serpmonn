---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/privacy-policy/privacy-policy.html{% else %}/frontend/{{ locale }}/privacy-policy/privacy-policy.html{% endif %}"
eleventyComputed:
  title: "{{ privacyPolicyTranslations[locale].privacyPolicy.title }}"
  description: "{{ privacyPolicyTranslations[locale].privacyPolicy.description }}"
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/privacy-policy/privacy-policy.html{% else %}{{ site.baseUrl }}/{{ locale }}/privacy-policy/privacy-policy.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
    <!-- Загрузка основного меню -->
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
    
    <!-- Основные стили сайта -->
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    
    <!-- Мета-теги для SEO и кодировки -->
    <meta http-equiv="Content-Language" content="{{ locale }}">
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    
    <!-- Настройки viewport для адаптивности -->
    <meta name="viewport" content="width=device-width, height=device-height, minimum-scale=0.5, initial-scale=1, maximum-scale=3, user-scalable=yes">
    
    <!-- Заголовок страницы -->
    <title>{{ privacyPolicyTranslations[locale].privacyPolicy.title }}</title>
    
    <!-- Open Graph разметка для социальных сетей -->
    <meta property="og:title" content="{{ privacyPolicyTranslations[locale].privacyPolicy.ogTitle }}">
    <meta property="og:description" content="{{ privacyPolicyTranslations[locale].privacyPolicy.ogDescription }}">
    <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
    <meta property="og:url" content="{{ site.baseUrl }}{{ page.url }}">
    <meta property="og:type" content="article">
    
    <!-- Twitter Card разметка -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ privacyPolicyTranslations[locale].privacyPolicy.ogTitle }}">
    <meta name="twitter:description" content="{{ privacyPolicyTranslations[locale].privacyPolicy.twitterDescription }}">
    <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
    
    <!-- Favicon и иконки для разных устройств -->
    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    <link rel="icon" type="image/png" sizes="32x32" href="/frontend/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/frontend/images/favicon-16x16.png">
    
    <!-- Стили для страницы политики конфиденциальности -->
    <link rel="stylesheet" href="privacy-styles.css">
    
    <!-- Стили для доступности -->
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    
    <!-- Каноническая ссылка для SEO -->
    <link rel="canonical" href="{{ site.baseUrl }}{{ page.url }}">
</head>
<body>
    <!-- Основной контент страницы -->
    <main class="policy-container" lang="{{ locale }}">
        <!-- Главный заголовок страницы -->
        <h1>{{ privacyPolicyTranslations[locale].privacyPolicy.mainTitle }}</h1>
        
        <!-- Навигация по разделам политики -->
        <nav class="policy-nav" aria-label="{{ privacyPolicyTranslations[locale].privacyPolicy.navAriaLabel }}">
            <ul>
                {% for navItem in privacyPolicyTranslations[locale].privacyPolicy.navigation %}
                <li><a href="#{{ navItem.id }}">{{ navItem.text }}</a></li>
                {% endfor %}
            </ul>
        </nav>

        <!-- Раздел "Введение" -->
        <section id="introduction" aria-labelledby="intro-heading">
            <h2 id="intro-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.introduction.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.introduction.content }}</p>
        </section>

        <!-- Раздел "Собираемые данные" -->
        <section id="data-collection" aria-labelledby="collection-heading">
            <h2 id="collection-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.dataCollection.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.dataCollection.intro }}</p>
            <ul>
                {% for item in privacyPolicyTranslations[locale].privacyPolicy.dataCollection.list %}
                <li><strong>{{ item.title }}</strong> {{ item.description }}</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Раздел "Используемые данные" -->
        <section id="data-usage" aria-labelledby="usage-heading">
            <h2 id="usage-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.dataUsage.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.dataUsage.intro }}</p>
            <ul>
                {% for item in privacyPolicyTranslations[locale].privacyPolicy.dataUsage.list %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Раздел "Хранение данных" -->
        <section id="data-storage" aria-labelledby="storage-heading">
            <h2 id="storage-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.dataStorage.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.dataStorage.intro }}</p>
            <ul>
                {% for item in privacyPolicyTranslations[locale].privacyPolicy.dataStorage.list %}
                <li><strong>{{ item.title }}</strong> {{ item.description }}</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Раздел "Передача данных третьим лицам" -->
        <section id="data-sharing" aria-labelledby="sharing-heading">
            <h2 id="sharing-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.dataSharing.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.dataSharing.content }}</p>
        </section>

        <!-- Раздел "Защита данных" -->
        <section id="data-protection" aria-labelledby="protection-heading">
            <h2 id="protection-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.dataProtection.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.dataProtection.content }}</p>
        </section>

        <!-- Раздел "Права пользователя" -->
        <section id="user-rights" aria-labelledby="rights-heading">
            <h2 id="rights-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.userRights.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.userRights.intro }}</p>
            <ul>
                {% for item in privacyPolicyTranslations[locale].privacyPolicy.userRights.list %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>
        </section>

        <!-- Раздел "Контактная информация" -->
        <section id="contact" aria-labelledby="contact-heading">
            <h2 id="contact-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.contact.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.contact.content1 | safe }}</p>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.contact.content2 | safe }}</p>
        </section>

        <!-- Раздел "Изменения в политике конфиденциальности" -->
        <section id="changes" aria-labelledby="changes-heading">
            <h2 id="changes-heading">{{ privacyPolicyTranslations[locale].privacyPolicy.changes.title }}</h2>
            <p>{{ privacyPolicyTranslations[locale].privacyPolicy.changes.content1 }}</p>
            <p class="date-updated"><strong>{{ privacyPolicyTranslations[locale].privacyPolicy.changes.lastUpdated }}</strong></p>
        </section>

        <!-- Контейнер для кнопки принятия политики -->
        <div class="accept-container">
            <button class="accept-button" onclick="handleAcceptPolicy()">
                {{ privacyPolicyTranslations[locale].privacyPolicy.acceptButton }}
            </button>
        </div>
    </main>

    <!-- Скрипт для мобильных улучшений -->
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
    
    <!-- Скрипт для функциональности страницы -->
    <script>
        // Плавная прокрутка для навигационных ссылок
        document.querySelectorAll('.policy-nav a').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Функция обработки принятия политики конфиденциальности
        function handleAcceptPolicy() {
            localStorage.setItem('privacyPolicyAccepted', 'true');
            alert('{{ privacyPolicyTranslations[locale].privacyPolicy.acceptAlert }}');
        }

        // Проверка принятия политики при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            if (localStorage.getItem('privacyPolicyAccepted') === 'true') {
                console.log('{{ privacyPolicyTranslations[locale].privacyPolicy.acceptLog }}');
            }
        });
    </script>
</body>
</html>