---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "{% if lang == 'ru' %}/frontend/news/articles/port-forwarding-guide.html{% else %}/frontend/{{ lang }}/news/articles/port-forwarding-guide.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ lang }}" dir="{% if lang in ['ar', 'he', 'ug', 'fa'] %}rtl{% else %}ltr{% endif %}">
<head>
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    <meta http-equiv="Content-Language" content="{{ lang }}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ portForwardingGuide[lang].meta.description }}">
    <title>{{ portForwardingGuide[lang].meta.title }}</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ portForwardingGuide[lang].meta.ogTitle }}">
    <meta property="og:description" content="{{ portForwardingGuide[lang].meta.ogDescription }}">
    <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
    {% if lang == 'ru' %}
    <meta property="og:url" content="https://serpmonn.ru/frontend/news/articles/port-forwarding-guide.html">
    {% else %}
    <meta property="og:url" content="https://serpmonn.ru/frontend/{{ lang }}/news/articles/port-forwarding-guide.html">
    {% endif %}
    <meta property="og:type" content="article">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ portForwardingGuide[lang].meta.twitterTitle }}">
    <meta name="twitter:description" content="{{ portForwardingGuide[lang].meta.twitterDescription }}">
    <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{{ portForwardingGuide[lang].meta.ogTitle }}",
      "datePublished": "2025-10-29",
      "author": {
        "@type": "Organization",
        "name": "Serpmonn"
      },
      "description": "{{ portForwardingGuide[lang].meta.ogDescription }}",
      "image": "https://serpmonn.ru/frontend/images/Banner_Serpmonn.png",
      "inLanguage": "{{ lang }}",
      "publisher": {
        "@type": "Organization",
        "name": "Serpmonn",
        "logo": {
          "@type": "ImageObject",
          "url": "https://serpmonn.ru/frontend/images/serpmonn.ico"
        }
      },
      "url": "https://serpmonn.ru{% if lang == 'ru' %}/frontend/news/articles/port-forwarding-guide.html{% else %}/frontend/{{ lang }}/news/articles/port-forwarding-guide.html{% endif %}"
    }
    </script>

    <!-- Каноническая ссылка -->
    {% if lang == 'ru' %}
    <link rel="canonical" href="https://serpmonn.ru/frontend/news/articles/port-forwarding-guide.html" />
    {% else %}
    <link rel="canonical" href="https://serpmonn.ru/frontend/{{ lang }}/news/articles/port-forwarding-guide.html" />
    {% endif %}

    <!-- Hreflang для всех языков -->
    {% for loc in locales %}
    {% if loc == 'ru' %}
    <link rel="alternate" href="https://serpmonn.ru/frontend/news/articles/port-forwarding-guide.html" hreflang="{{ loc }}" />
    {% else %}
    <link rel="alternate" href="https://serpmonn.ru/frontend/{{ loc }}/news/articles/port-forwarding-guide.html" hreflang="{{ loc }}" />
    {% endif %}
    {% endfor %}
    <link rel="alternate" href="https://serpmonn.ru/frontend/news/articles/port-forwarding-guide.html" hreflang="x-default" />

    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    <link rel="stylesheet" href="/frontend/styles/base.css">
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    <link rel="stylesheet" href="/frontend/styles/menu.css" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/frontend/styles/articles/port-forwarding.css">
</head>
<body>
    <div class="reading-progress">
        <div class="reading-progress-bar"></div>
    </div>
    
    <button class="toc-toggle" onclick="toggleFloatingToc()">
        <i class="fas fa-list"></i>
    </button>
    
    <div class="floating-toc">
        <h3>{{ portForwardingGuide[lang].article.sections.toc.title }}</h3>
        <ul>
            <li><a href="#section-what-is">{{ portForwardingGuide[lang].article.sections.toc.items[0] }}</a></li>
            <li><a href="#section-why-need">{{ portForwardingGuide[lang].article.sections.toc.items[1] }}</a></li>
            <li><a href="#section-preparation">{{ portForwardingGuide[lang].article.sections.toc.items[2] }}</a></li>
            <li><a href="#section-step-by-step">{{ portForwardingGuide[lang].article.sections.toc.items[3] }}</a></li>
            <li><a href="#section-routers">{{ portForwardingGuide[lang].article.sections.toc.items[4] }}</a></li>
            <li><a href="#section-verification">{{ portForwardingGuide[lang].article.sections.toc.items[5] }}</a></li>
            <li><a href="#section-troubleshooting">{{ portForwardingGuide[lang].article.sections.toc.items[6] }}</a></li>
            <li><a href="#section-security">{{ portForwardingGuide[lang].article.sections.toc.items[7] }}</a></li>
        </ul>
    </div>
    
    <div id="menuContainer"></div>
    <article class="article-container" tabindex="0">
        <header class="article-header">
            <span class="article-category">{{ portForwardingGuide[lang].article.category }}</span>
            <div class="table-of-contents sticky-toc">
                <h2>{{ portForwardingGuide[lang].article.sections.toc.title }}</h2>
                <ul>
                    <li><a href="#section-what-is">{{ portForwardingGuide[lang].article.sections.toc.items[0] }}</a></li>
                    <li><a href="#section-why-need">{{ portForwardingGuide[lang].article.sections.toc.items[1] }}</a></li>
                    <li><a href="#section-preparation">{{ portForwardingGuide[lang].article.sections.toc.items[2] }}</a></li>
                    <li><a href="#section-step-by-step">{{ portForwardingGuide[lang].article.sections.toc.items[3] }}</a></li>
                    <li><a href="#section-routers">{{ portForwardingGuide[lang].article.sections.toc.items[4] }}</a></li>
                    <li><a href="#section-verification">{{ portForwardingGuide[lang].article.sections.toc.items[5] }}</a></li>
                    <li><a href="#section-troubleshooting">{{ portForwardingGuide[lang].article.sections.toc.items[6] }}</a></li>
                    <li><a href="#section-security">{{ portForwardingGuide[lang].article.sections.toc.items[7] }}</a></li>
                </ul>
            </div>
            <div class="ad-top-banner ad-banner loading">
                <ins class="mrg-tag" style="display:inline-block;" data-ad-client="ad-1897960" data-ad-slot="1897960"></ins>
            </div>
            <h1 class="article-title">{{ portForwardingGuide[lang].article.title }}</h1>
            <div class="article-meta">{{ portForwardingGuide[lang].article.date }} • {{ portForwardingGuide[lang].article.readTime }}</div>
        </header>

        <div class="article-content">
            <p>{{ portForwardingGuide[lang].article.intro }}</p>

            <h2 id="section-what-is">{{ portForwardingGuide[lang].article.sections.whatIs.title }}</h2>
            <p>{{ portForwardingGuide[lang].article.sections.whatIs.content | safe }}</p>
            
            <div class="visual-guide">
                <div class="visual-item">
                    <div class="visual-icon"><i class="fas fa-globe"></i></div>
                    <h3>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.internet.title }}</h3>
                    <p>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.internet.desc }}</p>
                </div>
                <div class="visual-item">
                    <div class="visual-icon"><i class="fas fa-router"></i></div>
                    <h3>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.router.title }}</h3>
                    <p>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.router.desc }}</p>
                </div>
                <div class="visual-item">
                    <div class="visual-icon"><i class="fas fa-desktop"></i></div>
                    <h3>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.device.title }}</h3>
                    <p>{{ portForwardingGuide[lang].article.sections.whatIs.visualGuide.device.desc }}</p>
                </div>
            </div>

            <h2 id="section-why-need">{{ portForwardingGuide[lang].article.sections.whyNeed.title }}</h2>
            
            <table class="port-table">
                <thead>
                    <tr>
                        {% for header in portForwardingGuide[lang].article.sections.whyNeed.table.headers %}
                        <th>{{ header }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in portForwardingGuide[lang].article.sections.whyNeed.table.rows %}
                    <tr>
                        <td>{{ row.purpose | safe }}</td>
                        <td>{{ row.ports | safe }}</td>
                        <td>{{ row.usage | safe }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="security-warning">
                <h4>{{ portForwardingGuide[lang].article.sections.securityWarning.title }}</h4>
                <p>{{ portForwardingGuide[lang].article.sections.securityWarning.content }}</p>
            </div>

            <h2 id="section-preparation">{{ portForwardingGuide[lang].article.sections.preparation.title }}</h2>
            
            <ol class="step-list">
                {% for step in portForwardingGuide[lang].article.sections.preparation.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.content | safe }}</p>
                    
                    {% if step.windows %}
                    <div class="code-example">
                        <h4>{{ step.windows.title }}</h4>
                        <pre><code class="language-cmd">{{ step.windows.code }}</code></pre>
                        <p>{{ step.windows.hint | safe }}</p>
                    </div>
                    {% endif %}
                    
                    {% if step.linuxMac %}
                    <div class="code-example">
                        <h4>{{ step.linuxMac.title }}</h4>
                        <pre><code class="language-bash">{{ step.linuxMac.code }}</code></pre>
                        <p>{{ step.linuxMac.hint | safe }}</p>
                    </div>
                    {% endif %}
                    
                    {% if step.router %}
                    <ul>
                        <li>{{ step.router | safe }}</li>
                        <li>{{ step.device | safe }}</li>
                    </ul>
                    {% endif %}
                    
                    {% if step.code %}
                    <div class="code-example">
                        <h4>{{ step.codeTitle }}</h4>
                        <pre><code class="language-bash">{{ step.code }}</code></pre>
                    </div>
                    {% endif %}
                </li>
                {% endfor %}
            </ol>

            <h2 id="section-step-by-step">{{ portForwardingGuide[lang].article.sections.stepByStep.title }}</h2>
            
            <ol class="step-list">
                {% for step in portForwardingGuide[lang].article.sections.stepByStep.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.content | safe }}</p>
                    
                    {% if step.ips %}
                    <ul>
                        {% for ip in step.ips %}
                        <li>{{ ip | safe }}</li>
                        {% endfor %}
                    </ul>
                    <p>{{ step.note | safe }}</p>
                    {% endif %}
                    
                    {% if step.names %}
                    <ul>
                        {% for name in step.names %}
                        <li>{{ name | safe }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                    
                    {% if step.params %}
                    <ul>
                        {% for param in step.params %}
                        <li>{{ param | safe }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </li>
                {% endfor %}
            </ol>

            <h2 id="section-routers">{{ portForwardingGuide[lang].article.sections.routers.title }}</h2>

            {% for guide in portForwardingGuide[lang].article.sections.routers.guides %}
            <div class="router-guide">
                <h4>{{ guide.icon }} {{ guide.brand }}</h4>
                <ol>
                    {% for step in guide.steps %}
                    {% if loop.index == 4 %}
                    <li>{{ step | safe }}
                        <ul>
                            {% for field in guide.fields %}
                            <li>{{ field | safe }}</li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% else %}
                    <li>{{ step | safe }}</li>
                    {% endif %}
                    {% endfor %}
                </ol>
            </div>
            {% endfor %}

            <h2 id="section-verification">{{ portForwardingGuide[lang].article.sections.verification.title }}</h2>

            <ol class="step-list">
                {% for step in portForwardingGuide[lang].article.sections.verification.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.content | safe }}</p>
                    
                    {% if step.links %}
                    <ul>
                        {% for link in step.links %}
                        <li><a href="{{ link.url }}" target="_blank" rel="noopener">{{ link.name }}</a></li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                    
                    {% if step.code %}
                    <div class="code-example">
                        <h4>{{ step.codeTitle }}</h4>
                        <pre><code class="language-bash">{{ step.code }}</code></pre>
                    </div>
                    {% endif %}
                </li>
                {% endfor %}
            </ol>

            <div class="success-tip">
                <h4>{{ portForwardingGuide[lang].article.sections.verification.successTips.title }}</h4>
                <ul>
                    {% for tip in portForwardingGuide[lang].article.sections.verification.successTips.tips %}
                    <li>{{ tip }}</li>
                    {% endfor %}
                </ul>
            </div>

            <h2 id="section-troubleshooting">{{ portForwardingGuide[lang].article.sections.troubleshooting.title }}</h2>

            {% for problem in portForwardingGuide[lang].article.sections.troubleshooting.problems %}
            <div class="router-guide">
                <h4>{{ problem.title }}</h4>
                {% if problem.content %}<p>{{ problem.content | safe }}</p>{% endif %}
                <ul>
                    {% for item in problem.items %}
                    <li>{{ item | safe }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}

            <h2 id="section-security">{{ portForwardingGuide[lang].article.sections.security.title }}</h2>

            <div class="security-warning">
                <h4>{{ portForwardingGuide[lang].article.sections.security.rules.title }}</h4>
                <ol>
                    {% for rule in portForwardingGuide[lang].article.sections.security.rules.items %}
                    <li>{{ rule | safe }}</li>
                    {% endfor %}
                </ol>
            </div>

            <div class="success-tip">
                <h4>{{ portForwardingGuide[lang].article.sections.security.bestPractices.title }}</h4>
                <ul>
                    {% for practice in portForwardingGuide[lang].article.sections.security.bestPractices.items %}
                    <li>{{ practice | safe }}</li>
                    {% endfor %}
                </ul>
            </div>

            <h3>{{ portForwardingGuide[lang].article.sections.security.checklist.title }}</h3>
            <ul class="checklist">
                {% for item in portForwardingGuide[lang].article.sections.security.checklist.items %}
                <li>
                    <input type="checkbox" id="security{{ loop.index }}">
                    <label for="security{{ loop.index }}">{{ item }}</label>
                </li>
                {% endfor %}
            </ul>

            <div class="share-buttons">
                <h3>{{ portForwardingGuide[lang].article.sections.share.title }}</h3>
                <button onclick="share('telegram')" aria-label="Поделиться в Telegram">{{ portForwardingGuide[lang].article.sections.share.telegram }}</button>
                <button onclick="share('vk')" aria-label="Поделиться во ВКонтакте">{{ portForwardingGuide[lang].article.sections.share.vk }}</button>
            </div>

            <div class="comments-section">
                <h2>{{ portForwardingGuide[lang].article.sections.comments.title }}</h2>
                <div class="comment-form">
                    <h3>{{ portForwardingGuide[lang].article.sections.comments.formTitle }}</h3>
                    <form id="commentForm">
                        <div class="form-group">
                            <label for="commentName">{{ portForwardingGuide[lang].article.sections.comments.nameLabel }}</label>
                            <input type="text" id="commentName" required>
                        </div>
                        <div class="form-group">
                            <label for="commentText">{{ portForwardingGuide[lang].article.sections.comments.commentLabel }}</label>
                            <textarea id="commentText" required></textarea>
                        </div>
                        <button type="submit" class="submit-button">{{ portForwardingGuide[lang].article.sections.comments.submit }}</button>
                    </form>
                </div>
                <div id="commentsList" class="comments-list">
                    <!-- Комментарии будут загружены здесь -->
                </div>
            </div>
        </div>

        <div class="social-subscribe">
            <a class="tg-btn" href="{{ portForwardingGuide[lang].article.social.telegram.url }}" target="_blank" rel="noopener" aria-label="{{ portForwardingGuide[lang].article.social.telegram.aria }}">{{ portForwardingGuide[lang].article.social.telegram.text }}</a>
            <a class="vk-btn" href="{{ portForwardingGuide[lang].article.social.vk.url }}" target="_blank" rel="noopener" aria-label="{{ portForwardingGuide[lang].article.social.vk.aria }}">{{ portForwardingGuide[lang].article.social.vk.text }}</a>
        </div>
    </article>

    <button class="scroll-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Вернуться наверх">{{ portForwardingGuide[lang].article.buttons.scrollTop }}</button>

    <div id="mobile-anchor-ad" class="mobile-anchor-ad ad-banner loading" style="position:fixed;left:0;right:0;bottom:0;display:none;justify-content:center;z-index:2147483000;padding-bottom:env(safe-area-inset-bottom);pointer-events:none">
        <div style="pointer-events:auto;background:rgba(255,255,255,.98);box-shadow:0 -2px 10px rgba(0,0,0,.15);border-radius:8px 8px 0 0;padding:6px 10px;display:flex;gap:8px;align-items:center">
            <button type="button" aria-label="Закрыть рекламу" onclick="this.closest('.mobile-anchor-ad').style.display='none';localStorage.setItem('anchor_closed','1')" style="background:none;border:0;font-size:16px;line-height:1;cursor:pointer">{{ portForwardingGuide[lang].article.buttons.closeAd }}</button>
            <ins class="mrg-tag" style="display:inline-block;width:320px;height:50px" data-ad-client="ad-1898031" data-ad-slot="1898031"></ins>
        </div>
    </div>

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    
    <script>
        // Функции для работы с комментариями
        function saveComment(name, text) {
            const comment = {
                name: name,
                text: text,
                date: new Date().toLocaleString('{{ lang }}')
            };
            
            let comments = JSON.parse(localStorage.getItem('articleComments_{{ lang }}')) || [];
            comments.push(comment);
            localStorage.setItem('articleComments_{{ lang }}', JSON.stringify(comments));
            
            return comment;
        }
        
        function loadComments() {
            const comments = JSON.parse(localStorage.getItem('articleComments_{{ lang }}')) || [];
            const commentsList = document.getElementById('commentsList');
            
            if (comments.length === 0) {
                commentsList.innerHTML = '<div class="no-comments">{{ portForwardingGuide[lang].article.sections.comments.noComments }}</div>';
                return;
            }
            
            commentsList.innerHTML = comments.map(comment => `
                <div class="comment">
                    <div class="comment-header">
                        <span class="comment-author">${escapeHtml(comment.name)}</span>
                        <span class="comment-date">${escapeHtml(comment.date)}</span>
                    </div>
                    <div class="comment-text">${escapeHtml(comment.text)}</div>
                </div>
            `).join('');
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Основные функции
        function toggleFloatingToc() {
            const floatingToc = document.querySelector('.floating-toc');
            floatingToc.style.display = floatingToc.style.display === 'block' ? 'none' : 'block';
        }
        
        function share(network) {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent(document.title);
            const shareUrls = {
                telegram: `https://t.me/share/url?url=${url}&text=${title}`,
                vk: `https://vk.com/share.php?url=${url}&title=${title}`
            };
            window.open(shareUrls[network], '_blank');
        }
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Загрузка комментариев
            loadComments();
            
            // Обработка формы комментариев
            document.getElementById('commentForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const nameInput = document.getElementById('commentName');
                const textInput = document.getElementById('commentText');
                
                const name = nameInput.value.trim();
                const text = textInput.value.trim();
                
                if (name && text) {
                    saveComment(name, text);
                    loadComments();
                    
                    // Очистка формы
                    nameInput.value = '';
                    textInput.value = '';
                }
            });
            
            // Анимация появления контента
            const contentObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.article-content > *').forEach(el => contentObserver.observe(el));
            
            // Кнопка "Наверх"
            window.addEventListener('scroll', () => {
                const button = document.querySelector('.scroll-to-top');
                button.classList.toggle('show', window.scrollY > 300);
            });
            
            // Прогресс чтения
            const progressBar = document.querySelector('.reading-progress-bar');
            window.addEventListener('scroll', () => {
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const scrollTop = window.scrollY;
                const progress = (scrollTop / (documentHeight - windowHeight)) * 100;
                progressBar.style.width = `${progress}%`;
            });
            
            // Показывать плавающее оглавление на десктопах
            if (window.innerWidth > 991) {
                document.querySelector('.floating-toc').style.display = 'block';
            }
            
            // Управление рекламой
            document.querySelectorAll('.mrg-tag').forEach(ad => {
                const banner = ad.closest('.ad-banner');
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const script = document.createElement('script');
                            script.src = 'https://ad.mail.ru/static/ads-async.js';
                            script.async = true;
                            document.head.appendChild(script);
                            (window.MRGtag = window.MRGtag || []).push({});
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });
                observer.observe(ad);
                
                const mutationObserver = new MutationObserver(() => {
                    let attempts = 0;
                    const maxAttempts = 5;
                    const interval = setInterval(() => {
                        if (!ad.hasChildNodes() || ad.innerHTML.trim() === '') {
                            if (attempts >= maxAttempts) {
                                banner.classList.add('hidden');
                                banner.classList.remove('loading');
                                clearInterval(interval);
                            }
                        } else {
                            banner.classList.remove('loading');
                            clearInterval(interval);
                        }
                        attempts++;
                    }, 1000);
                });
                mutationObserver.observe(ad, { childList: true, subtree: true });
            });
            
            // Мобильная реклама
            if (localStorage.getItem('anchor_closed') !== '1') {
                const w = window.innerWidth || document.documentElement.clientWidth;
                const a = document.getElementById('mobile-anchor-ad');
                if (a && w <= 768) {
                    a.style.display = 'flex';
                }
                if (window.visualViewport) {
                    visualViewport.addEventListener('resize', () => {
                        const h = visualViewport.height;
                        a.style.display = (h < window.innerHeight * 0.8) ? 'none' : (w <= 768 ? 'flex' : 'none');
                    });
                }
            }
        });
    </script>
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
</body>
</html>