---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/news/articles/web-development-guide.html{% else %}/frontend/{{ locale }}/news/articles/web-development-guide.html{% endif %}"
eleventyComputed:
  title: "{{ webDevelopmentGuide[locale].meta.title }}"
  description: "{{ webDevelopmentGuide[locale].meta.description }}"
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/frontend/news/articles/web-development-guide.html{% else %}{{ site.baseUrl }}/frontend/{{ locale }}/news/articles/web-development-guide.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
<head>
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    <meta http-equiv="Content-Language" content="{{ locale }}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description }}">
    <title>{{ title }}</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ webDevelopmentGuide[locale].meta.ogTitle }}">
    <meta property="og:description" content="{{ webDevelopmentGuide[locale].meta.ogDescription }}">
    <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
    <meta property="og:url" content="{{ canonical }}">
    <meta property="og:type" content="article">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ webDevelopmentGuide[locale].meta.twitterTitle }}">
    <meta name="twitter:description" content="{{ webDevelopmentGuide[locale].meta.twitterDescription }}">
    <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{{ webDevelopmentGuide[locale].meta.ogTitle }}",
      "datePublished": "2024-08-18",
      "author": {
        "@type": "Organization",
        "name": "Serpmonn"
      },
      "description": "{{ webDevelopmentGuide[locale].meta.ogDescription }}",
      "image": "https://serpmonn.ru/frontend/images/Banner_Serpmonn.png",
      "inLanguage": "{{ locale }}",
      "publisher": {
        "@type": "Organization",
        "name": "Serpmonn",
        "logo": {
          "@type": "ImageObject",
          "url": "https://serpmonn.ru/frontend/images/serpmonn.ico"
        }
      },
      "url": "{{ canonical }}"
    }
    </script>

    <!-- Каноническая ссылка -->
    <link rel="canonical" href="{{ canonical }}" />

    <!-- Hreflang для всех языков -->
    {% for loc in locales %}
    {% if loc == 'ru' %}
    <link rel="alternate" href="{{ site.baseUrl }}/frontend/news/articles/web-development-guide.html" hreflang="{{ loc }}" />
    {% else %}
    <link rel="alternate" href="{{ site.baseUrl }}/frontend/{{ loc }}/news/articles/web-development-guide.html" hreflang="{{ loc }}" />
    {% endif %}
    {% endfor %}
    <link rel="alternate" href="{{ site.baseUrl }}/frontend/news/articles/web-development-guide.html" hreflang="x-default" />

    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    <link rel="stylesheet" href="/frontend/styles/base.css">
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    <link rel="stylesheet" href="/frontend/styles/menu.css" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/frontend/styles/articles/web-development-guide.css">
</head>
<body>
    <div class="reading-progress">
        <div class="reading-progress-bar"></div>
    </div>
    
    <button class="toc-toggle" onclick="toggleFloatingToc()">
        <i class="fas fa-list"></i>
    </button>
    
    <div class="floating-toc">
        <h3>{{ webDevelopmentGuide[locale].article.sections.toc.title }}</h3>
        <ul>
            {% for item in webDevelopmentGuide[locale].article.sections.toc.items %}
            <li><a href="#section-{{ item.anchor }}">{{ item.text }}</a></li>
            {% endfor %}
        </ul>
    </div>
    
    <div id="menuContainer"></div>
    <article class="article-container" tabindex="0">
        <header class="article-header">
            <span class="article-category">{{ webDevelopmentGuide[locale].article.category }}</span>
            <div class="table-of-contents sticky-toc">
                <h2>{{ webDevelopmentGuide[locale].article.sections.toc.title }}</h2>
                <ul>
                    {% for item in webDevelopmentGuide[locale].article.sections.toc.items %}
                    <li><a href="#section-{{ item.anchor }}">{{ item.text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="ad-top-banner ad-banner loading">
                <ins class="mrg-tag" style="display:inline-block;" data-ad-client="ad-1897960" data-ad-slot="1897960"></ins>
            </div>
            <h1 class="article-title">{{ webDevelopmentGuide[locale].article.title }}</h1>
            <div class="article-meta">{{ webDevelopmentGuide[locale].article.date }} • {{ webDevelopmentGuide[locale].article.readTime }}</div>
        </header>

        <div class="article-content">
            <p>{{ webDevelopmentGuide[locale].article.intro }}</p>

            <h2 id="section-goals">{{ webDevelopmentGuide[locale].article.sections.goals.title }}</h2>
            <ul>
                {% for item in webDevelopmentGuide[locale].article.sections.goals.items %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>

            <h2 id="section-tools">{{ webDevelopmentGuide[locale].article.sections.tools.title }}</h2>
            <div class="tech-grid">
                {% for card in webDevelopmentGuide[locale].article.sections.tools.techCards %}
                <div class="tech-card">
                    <span class="tech-icon">{{ card.icon }}</span>
                    <h4>{{ card.title }}</h4>
                    <p>{{ card.description }}</p>
                </div>
                {% endfor %}
            </div>

            <h2 id="section-guide">{{ webDevelopmentGuide[locale].article.sections.guide.title }}</h2>
            
            <div class="visual-guide">
                {% for visual in webDevelopmentGuide[locale].article.sections.guide.visuals %}
                <div class="visual-item">
                    <div class="visual-icon"><i class="{{ visual.icon }}"></i></div>
                    <h3>{{ visual.title }}</h3>
                    <p>{{ visual.description }}</p>
                </div>
                {% endfor %}
            </div>
            
            <ol class="step-list">
                {% for step in webDevelopmentGuide[locale].article.sections.guide.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.description }}</p>
                    
                    {% if step.codeExample %}
                    <div class="code-example">
                        <h4>{{ step.codeExample.title }}</h4>
                        <pre><code class="language-{{ step.codeExample.language }}">{{ step.codeExample.code }}</code></pre>
                    </div>
                    {% endif %}
                    
                    {% if step.interactiveEditor %}
                    <div class="interactive-editor {{ step.interactiveEditor.type }}-editor">
                        <div class="editor-toolbar">
                            <span>{{ step.interactiveEditor.toolbar }}</span>
                            <button class="run-button" onclick="runCode(this)">{{ step.interactiveEditor.runButton }}</button>
                        </div>
                        <div class="editor-content">
                            <div class="code-area">
                                <textarea class="code-textarea">{{ step.interactiveEditor.defaultCode }}</textarea>
                            </div>
                            <div class="preview-area">{{ step.interactiveEditor.previewContent | safe }}</div>
                        </div>
                    </div>
                    {% endif %}
                </li>
                {% endfor %}
            </ol>

            <div class="highlight-box">
                <h4>{{ webDevelopmentGuide[locale].article.sections.tips.title }}</h4>
                <p>{{ webDevelopmentGuide[locale].article.sections.tips.content }}</p>
            </div>

            <h2 id="section-modern-tools">{{ webDevelopmentGuide[locale].article.sections.modernTools.title }}</h2>
            <p>{{ webDevelopmentGuide[locale].article.sections.modernTools.intro }}</p>
            <ul>
                {% for tool in webDevelopmentGuide[locale].article.sections.modernTools.list %}
                <li><strong>{{ tool.name }}:</strong> {{ tool.description }}</li>
                {% endfor %}
            </ul>

            <div class="warning-box">
                <h4>{{ webDevelopmentGuide[locale].article.sections.warning.title }}</h4>
                <p>{{ webDevelopmentGuide[locale].article.sections.warning.content }}</p>
            </div>

            <h2 id="section-faq">{{ webDevelopmentGuide[locale].article.sections.faq.title }}</h2>
            
            {% for faq in webDevelopmentGuide[locale].article.sections.faq.items %}
            <div class="faq-item">
                <div class="faq-question" onclick="toggleFaq(this)">
                    {{ faq.question }}
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="faq-answer">
                    <p>{{ faq.answer }}</p>
                </div>
            </div>
            {% endfor %}

            <h3>{{ webDevelopmentGuide[locale].article.sections.checklist.title }}</h3>
            <ul class="checklist">
                {% for item in webDevelopmentGuide[locale].article.sections.checklist.items %}
                <li>
                    <input type="checkbox" id="check{{ loop.index }}">
                    <label for="check{{ loop.index }}">{{ item }}</label>
                </li>
                {% endfor %}
            </ul>

            <h2 id="section-resources">{{ webDevelopmentGuide[locale].article.sections.resources.title }}</h2>
            <ul>
                {% for resource in webDevelopmentGuide[locale].article.sections.resources.links %}
                <li><a href="{{ resource.url }}" target="_blank" rel="noopener">{{ resource.name }}</a> — {{ resource.description }}</li>
                {% endfor %}
            </ul>

            <p>{{ webDevelopmentGuide[locale].article.sections.conclusion }}</p>

            <div class="share-buttons">
                <h3>{{ webDevelopmentGuide[locale].article.sections.share.title }}</h3>
                <button onclick="share('telegram')" aria-label="{{ webDevelopmentGuide[locale].article.sections.share.telegramAria }}">{{ webDevelopmentGuide[locale].article.sections.share.telegram }}</button>
                <button onclick="share('vk')" aria-label="{{ webDevelopmentGuide[locale].article.sections.share.vkAria }}">{{ webDevelopmentGuide[locale].article.sections.share.vk }}</button>
            </div>

            <div class="comments-section">
                <h2>{{ webDevelopmentGuide[locale].article.sections.comments.title }}</h2>
                <div class="comment-form">
                    <h3>{{ webDevelopmentGuide[locale].article.sections.comments.formTitle }}</h3>
                    <form id="commentForm">
                        <div class="form-group">
                            <label for="commentName">{{ webDevelopmentGuide[locale].article.sections.comments.nameLabel }}</label>
                            <input type="text" id="commentName" required>
                        </div>
                        <div class="form-group">
                            <label for="commentText">{{ webDevelopmentGuide[locale].article.sections.comments.commentLabel }}</label>
                            <textarea id="commentText" required></textarea>
                        </div>
                        <button type="submit" class="submit-button">{{ webDevelopmentGuide[locale].article.sections.comments.submit }}</button>
                    </form>
                </div>
                <div id="commentsList" class="comments-list">
                    <!-- Комментарии будут загружены здесь -->
                </div>
            </div>
        </div>

        <div class="social-subscribe">
            <a class="tg-btn" href="{{ webDevelopmentGuide[locale].article.social.telegram.url }}" target="_blank" rel="noopener" aria-label="{{ webDevelopmentGuide[locale].article.social.telegram.aria }}">{{ webDevelopmentGuide[locale].article.social.telegram.text }}</a>
            <a class="vk-btn" href="{{ webDevelopmentGuide[locale].article.social.vk.url }}" target="_blank" rel="noopener" aria-label="{{ webDevelopmentGuide[locale].article.social.vk.aria }}">{{ webDevelopmentGuide[locale].article.social.vk.text }}</a>
        </div>
    </article>

    <button class="scroll-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="{{ webDevelopmentGuide[locale].article.buttons.scrollTopAria }}">{{ webDevelopmentGuide[locale].article.buttons.scrollTop }}</button>

    <div id="mobile-anchor-ad" class="mobile-anchor-ad ad-banner loading" style="position:fixed;left:0;right:0;bottom:0;display:none;justify-content:center;z-index:2147483000;padding-bottom:env(safe-area-inset-bottom);pointer-events:none">
        <div style="pointer-events:auto;background:rgba(255,255,255,.98);box-shadow:0 -2px 10px rgba(0,0,0,.15);border-radius:8px 8px 0 0;padding:6px 10px;display:flex;gap:8px;align-items:center">
            <button type="button" aria-label="{{ webDevelopmentGuide[locale].article.buttons.closeAdAria }}" onclick="this.closest('.mobile-anchor-ad').style.display='none';localStorage.setItem('anchor_closed','1')" style="background:none;border:0;font-size:16px;line-height:1;cursor:pointer">{{ webDevelopmentGuide[locale].article.buttons.closeAd }}</button>
            <ins class="mrg-tag" style="display:inline-block;width:320px;height:50px" data-ad-client="ad-1898031" data-ad-slot="1898031"></ins>
        </div>
    </div>

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    
    <script>
        // Локализованные строки для JavaScript
        const localeTexts = {
            noComments: "{{ webDevelopmentGuide[locale].article.sections.comments.noComments }}",
            commentSaved: "{{ webDevelopmentGuide[locale].article.sections.comments.commentSaved }}",
            error: "{{ webDevelopmentGuide[locale].article.sections.comments.error }}"
        };
        
        // Функции для работы с комментариями
        function saveComment(name, text) {
            const comment = {
                name: name,
                text: text,
                date: new Date().toLocaleString('{{ locale }}')
            };
            
            let comments = JSON.parse(localStorage.getItem('articleComments_{{ locale }}')) || [];
            comments.push(comment);
            localStorage.setItem('articleComments_{{ locale }}', JSON.stringify(comments));
            
            return comment;
        }
        
        function loadComments() {
            const comments = JSON.parse(localStorage.getItem('articleComments_{{ locale }}')) || [];
            const commentsList = document.getElementById('commentsList');
            
            if (comments.length === 0) {
                commentsList.innerHTML = '<div class="no-comments">' + localeTexts.noComments + '</div>';
                return;
            }
            
            commentsList.innerHTML = comments.map(comment => `
                <div class="comment">
                    <div class="comment-header">
                        <span class="comment-author">${escapeHtml(comment.name)}</span>
                        <span class="comment-date">${escapeHtml(comment.date)}</span>
                    </div>
                    <div class="comment-text">${escapeHtml(comment.text)}</div>
                </div>
            `).join('');
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Основные функции
        function toggleFloatingToc() {
            const floatingToc = document.querySelector('.floating-toc');
            floatingToc.style.display = floatingToc.style.display === 'block' ? 'none' : 'block';
        }
        
        function share(network) {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent(document.title);
            const shareUrls = {
                telegram: `https://t.me/share/url?url=${url}&text=${title}`,
                vk: `https://vk.com/share.php?url=${url}&title=${title}`
            };
            window.open(shareUrls[network], '_blank');
        }
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Загрузка комментариев
            loadComments();
            
            // Обработка формы комментариев
            document.getElementById('commentForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const nameInput = document.getElementById('commentName');
                const textInput = document.getElementById('commentText');
                
                const name = nameInput.value.trim();
                const text = textInput.value.trim();
                
                if (name && text) {
                    saveComment(name, text);
                    loadComments();
                    
                    // Очистка формы
                    nameInput.value = '';
                    textInput.value = '';
                    
                    // Показать сообщение об успехе
                    alert(localeTexts.commentSaved);
                }
            });
            
            // Анимация появления контента
            const contentObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.article-content > *').forEach(el => contentObserver.observe(el));
            
            // Кнопка "Наверх"
            window.addEventListener('scroll', () => {
                const button = document.querySelector('.scroll-to-top');
                button.classList.toggle('show', window.scrollY > 300);
            });
            
            // Прогресс чтения
            const progressBar = document.querySelector('.reading-progress-bar');
            window.addEventListener('scroll', () => {
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const scrollTop = window.scrollY;
                const progress = (scrollTop / (documentHeight - windowHeight)) * 100;
                progressBar.style.width = `${progress}%`;
            });
            
            // Показывать плавающее оглавление на десктопах
            if (window.innerWidth > 991) {
                document.querySelector('.floating-toc').style.display = 'block';
            }
            
            // Управление рекламой
            document.querySelectorAll('.mrg-tag').forEach(ad => {
                const banner = ad.closest('.ad-banner');
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const script = document.createElement('script');
                            script.src = 'https://ad.mail.ru/static/ads-async.js';
                            script.async = true;
                            document.head.appendChild(script);
                            (window.MRGtag = window.MRGtag || []).push({});
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });
                observer.observe(ad);
                
                const mutationObserver = new MutationObserver(() => {
                    let attempts = 0;
                    const maxAttempts = 5;
                    const interval = setInterval(() => {
                        if (!ad.hasChildNodes() || ad.innerHTML.trim() === '') {
                            if (attempts >= maxAttempts) {
                                banner.classList.add('hidden');
                                banner.classList.remove('loading');
                                clearInterval(interval);
                            }
                        } else {
                            banner.classList.remove('loading');
                            clearInterval(interval);
                        }
                        attempts++;
                    }, 1000);
                });
                mutationObserver.observe(ad, { childList: true, subtree: true });
            });
            
            // Мобильная реклама
            if (localStorage.getItem('anchor_closed') !== '1') {
                const w = window.innerWidth || document.documentElement.clientWidth;
                const a = document.getElementById('mobile-anchor-ad');
                if (a && w <= 768) {
                    a.style.display = 'flex';
                }
                if (window.visualViewport) {
                    visualViewport.addEventListener('resize', () => {
                        const h = visualViewport.height;
                        a.style.display = (h < window.innerHeight * 0.8) ? 'none' : (w <= 768 ? 'flex' : 'none');
                    });
                }
            }
        });

        // Функция для интерактивного редактора
        function runCode(button) {
            const editor = button.closest('.interactive-editor');
            const codeArea = editor.querySelector('.code-textarea');
            const previewArea = editor.querySelector('.preview-area');
            
            try {
                if (editor.classList.contains('html-editor')) {
                    previewArea.innerHTML = codeArea.value;
                } else if (editor.classList.contains('css-editor')) {
                    const styleTag = document.createElement('style');
                    styleTag.textContent = codeArea.value;
                    previewArea.innerHTML = '<h1>Пример заголовка</h1><p>Пример текста для стилизации с помощью CSS</p>';
                    previewArea.appendChild(styleTag);
                }
            } catch (error) {
                previewArea.innerHTML = `<div class="error">${localeTexts.error}: ${error.message}</div>`;
            }
        }
        
        // Функция для переключения FAQ
        function toggleFaq(element) {
            const answer = element.nextElementSibling;
            answer.classList.toggle('show');
            const icon = element.querySelector('i');
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');
        }
    </script>
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
</body>
</html>