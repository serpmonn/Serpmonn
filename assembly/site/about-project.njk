---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/about-project/about-project.html{% else %}/frontend/{{ locale }}/about-project/about-project.html{% endif %}"
eleventyComputed:
  title: "{{ aboutProjectTranslations[locale].aboutProject.title }}"
  description: "{{ aboutProjectTranslations[locale].aboutProject.description }}"
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/frontend/about-project/about-project.html{% else %}{{ site.baseUrl }}/frontend/{{ locale }}/about-project/about-project.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
    <head>
        <link rel="stylesheet" href="/frontend/styles/styles.css">
        <meta http-equiv="Content-Language" content="{{ locale }}">
        <title>{{ title }}</title>
        <meta charset="UTF-8">
        <meta name="description" content="{{ description }}">
        <meta name="viewport" content="width=device-width, height=device-height, minimum-scale=0.5, initial-scale=1, maximum-scale=3, user-scalable=yes">

        <!-- Open Graph -->
        <meta property="og:title" content="{{ aboutProjectTranslations[locale].aboutProject.ogTitle }}">
        <meta property="og:description" content="{{ aboutProjectTranslations[locale].aboutProject.ogDescription }}">
        <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
        <meta property="og:url" content="{{ canonical }}">
        <meta property="og:type" content="article">
        
        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ aboutProjectTranslations[locale].aboutProject.ogTitle }}">
        <meta name="twitter:description" content="{{ aboutProjectTranslations[locale].aboutProject.twitterDescription }}">
        <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">

        <!-- Каноническая ссылка -->
        <link rel="canonical" href="{{ canonical }}" />

        <!-- Hreflang для всех языков -->
        {% for loc in locales %}
            {% if loc == 'ru' %}
                <link rel="alternate" href="{{ site.baseUrl }}/frontend/about-project/about-project.html" hreflang="{{ loc }}" />
            {% else %}
                <link rel="alternate" href="{{ site.baseUrl }}/frontend/{{ loc }}/about-project/about-project.html" hreflang="{{ loc }}" />
            {% endif %}
        {% endfor %}
        <link rel="alternate" href="{{ site.baseUrl }}/frontend/about-project/about-project.html" hreflang="x-default" />

        <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
        <!-- Стили -->
        <link rel="stylesheet" href="/frontend/styles/about-project.css">
        <link rel="stylesheet" href="/frontend/styles/accessibility.css">
        <!-- Скрипты -->
        <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
        <script type="module" src="/frontend/scripts/counter.js"></script>
    </head>
    <body>

        <main class="about-section">
            <section class="intro">
                <h1>{{ aboutProjectTranslations[locale].aboutProject.whatIsSerpmonn }}</h1>
                <p>{{ aboutProjectTranslations[locale].aboutProject.introText1 }}</p>
                <p>{{ aboutProjectTranslations[locale].aboutProject.introText2 }}</p>
            </section>

            <!-- Счетчик пользователей -->
            <section class="user-counter">
                <div class="counter-card">
                    <div class="counter-header">
                        <svg class="counter-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 21V19C16 17.9391 15.5786 16.9217 14.8284 16.1716C14.0783 15.4214 13.0609 15 12 15H6C4.93913 15 3.92172 15.4214 3.17157 16.1716C2.42143 16.9217 2 17.9391 2 19V21M22 21V19C22 17.4087 21.3679 15.8826 20.2426 14.7574C19.1174 13.6321 17.5913 13 16 13M15 8C15 10.2091 13.2091 12 11 12C8.79086 12 7 10.2091 7 8C7 5.79086 8.79086 4 11 4C13.2091 4 15 5.79086 15 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <h2>{{ aboutProjectTranslations[locale].aboutProject.usersCounter }}</h2>
                    </div>
                    <div class="counter-content">
                        <div class="counter-value" id="userCounter">0</div>
                    </div>
                    <div class="counter-progress">
                        <div class="progress-bar"></div>
                    </div>
                </div>
            </section>

            <!-- Возраст проекта -->
            <section class="user-counter">
                <div class="counter-card">
                    <div class="counter-header">
                        <svg class="counter-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 10h10M7 14h7M7 6h10M5 3h14a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <h2>{{ aboutProjectTranslations[locale].aboutProject.projectAge }}</h2>
                    </div>
                    <div class="counter-content">
                        <div class="counter-value" id="projectAgeValue">—</div>
                    </div>
                    <div class="counter-progress">
                        <div class="progress-bar"></div>
                    </div>
                    <!-- Кнопка поддержки проекта -->
                    <div class="support-button-container">
                        <a href="{{ site.baseUrl }}{% if locale == 'ru' %}/frontend/donate/donate.html{% else %}/frontend/{{ locale }}/donate/donate.html{% endif %}" class="support-button-counter" target="_blank">
                            {{ aboutProjectTranslations[locale].aboutProject.supportButton }}
                        </a>
                    </div>
                </div>
                <div id="projectAgeData" data-start="2024-08-21T05:05:23+03:00" style="display:none"></div>
            </section>

            <section class="features">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.featuresTitle }}</h2>
                <ul>
                    {% for feature in aboutProjectTranslations[locale].aboutProject.featuresList %}
                    <li><strong>{{ feature.title }}</strong> — {{ feature.description }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="audience">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.audienceTitle }}</h2>
                <ul>
                    {% for audience in aboutProjectTranslations[locale].aboutProject.audienceList %}
                    <li><strong>{{ audience.title }}</strong> — {{ audience.description }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="status">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.statusTitle }}</h2>
                <ul>
                    {% for item in aboutProjectTranslations[locale].aboutProject.statusList %}
                    <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="security">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.securityTitle }}</h2>
                <p>{{ aboutProjectTranslations[locale].aboutProject.securityText }}</p>
            </section>

            <section class="tech">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.techTitle }}</h2>
                <ul>
                    {% for item in aboutProjectTranslations[locale].aboutProject.techList %}
                    <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="roadmap">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.roadmapTitle }}</h2>
                <ul>
                    {% for item in aboutProjectTranslations[locale].aboutProject.roadmapList %}
                    <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="faq">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.faqTitle }}</h2>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.faqQuestion1 }}</strong> {{ aboutProjectTranslations[locale].aboutProject.faqAnswer1 }}</p>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.faqQuestion2 }}</strong> {{ aboutProjectTranslations[locale].aboutProject.faqAnswer2 }}</p>
            </section>

            <section class="get-started">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.getStartedTitle }}</h2>
                <ol>
                    {% for step in aboutProjectTranslations[locale].aboutProject.getStartedSteps %}
                    <li>{{ step }}</li>
                    {% endfor %}
                </ol>
            </section>

            <section class="repository">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.repositoryTitle }}</h2>
                <p>{{ aboutProjectTranslations[locale].aboutProject.repositoryText }}</p>
                <ul>
                    <li><a href="https://gitverse.ru/Serpmonn/Serpmonn_project" target="_blank" style="color: #000000;">{{ aboutProjectTranslations[locale].aboutProject.gitverseLink }}</a></li>
                    <li><a href="https://github.com/serpmonn/Serpmonn" target="_blank" style="color: #000000;">{{ aboutProjectTranslations[locale].aboutProject.githubLink }}</a></li>
                </ul>
            </section>

            <section class="mission">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.missionTitle }}</h2>
                <p>{{ aboutProjectTranslations[locale].aboutProject.missionText }}</p>
            </section>

            <section class="technical-info">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.techInfoTitle }}</h2>
                <div class="tech-stats">
                    <div class="stat-item">
                        <span class="stat-number">1944</span>
                        <span class="stat-label">{{ aboutProjectTranslations[locale].aboutProject.pagesLabel }}</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">7</span>
                        <span class="stat-label">{{ aboutProjectTranslations[locale].aboutProject.toolsLabel }}</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">19</span>
                        <span class="stat-label">{{ aboutProjectTranslations[locale].aboutProject.gamesLabel }}</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">9</span>
                        <span class="stat-label">{{ aboutProjectTranslations[locale].aboutProject.newsLabel }}</span>
                    </div>
                </div>
                <p class="tech-description">
                    {{ aboutProjectTranslations[locale].aboutProject.techDescription }}
                </p>
            </section>

            <section class="legal">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.legalTitle }}</h2>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.rightsHolder }}</strong>: {{ aboutProjectTranslations[locale].aboutProject.rightsHolderName }}</p>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.statusLabel }}</strong>: {{ aboutProjectTranslations[locale].aboutProject.statusValue }}</p>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.innLabel }}</strong>: {{ aboutProjectTranslations[locale].aboutProject.innValue }}</p>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.copyright }}</strong>: {{ aboutProjectTranslations[locale].aboutProject.copyrightText }}</p>
                <p><strong>{{ aboutProjectTranslations[locale].aboutProject.license }}</strong>: {{ aboutProjectTranslations[locale].aboutProject.licenseText }}</p>
            </section>

            <section class="disclaimer">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.disclaimerTitle }}</h2>
                <p>{{ aboutProjectTranslations[locale].aboutProject.disclaimerText1 }}</p>
                <p>{{ aboutProjectTranslations[locale].aboutProject.disclaimerText2 }}
                    <ul>
                        {% for item in aboutProjectTranslations[locale].aboutProject.disclaimerList %}
                        <li>{{ item }}</li>
                        {% endfor %}
                    </ul>
                </p>
                <p>{{ aboutProjectTranslations[locale].aboutProject.disclaimerText3 }}</p>
                <p>{{ aboutProjectTranslations[locale].aboutProject.disclaimerText4 }}</p>
            </section>

            <section class="contacts">
                <h2>{{ aboutProjectTranslations[locale].aboutProject.contactsTitle }}</h2>
                <p>{{ aboutProjectTranslations[locale].aboutProject.contactsText }}</p>
                
                <div class="contact-block">
                    <h3>{{ aboutProjectTranslations[locale].aboutProject.supportTitle }}</h3>
                    <p><strong style="color: #EA4335;">Email:</strong> <a href="mailto:support@serpmonn.ru">support@serpmonn.ru</a></p>
                </div>
            
                <div class="contact-block">
                    <h3>{{ aboutProjectTranslations[locale].aboutProject.otherQuestionsTitle }}</h3>
                    <p><strong style="color: #EA4335;">Email:</strong> <a href="mailto:info@serpmonn.ru">info@serpmonn.ru</a></p>
                </div>
            </section>
        </main>
        <footer>
            <p>{{ aboutProjectTranslations[locale].aboutProject.footerText }} <a href="https://gitverse.ru/Serpmonn/Serpmonn_project/content/master/LICENSE" target="_blank">{{ aboutProjectTranslations[locale].aboutProject.licenseLink }}</a>.</p>
        </footer>
        <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
    </body>
</html>