---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/tools/marketing/utm-builder.html{% else %}/frontend/{{ locale }}/tools/marketing/utm-builder.html{% endif %}"
eleventyComputed:
  title: "{{ utmBuilder[locale].meta.title }}"
  description: "{{ utmBuilder[locale].meta.description }}"
  dir: "{% if rtlLocales.indexOf(locale) != -1 %}rtl{% else %}ltr{% endif %}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/frontend/tools/marketing/utm-builder.html{% else %}{{ site.baseUrl }}/frontend/{{ locale }}/tools/marketing/utm-builder.html{% endif %}"
---

<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
  <head>
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    <meta http-equiv="Content-Language" content="{{ locale }}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ utmBuilder[locale].meta.ogTitle }}">
    <meta property="og:description" content="{{ utmBuilder[locale].meta.ogDescription }}">
    <meta property="og:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">
    <meta property="og:url" content="{{ canonical }}">
    <meta property="og:type" content="website">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ utmBuilder[locale].meta.twitterTitle }}">
    <meta name="twitter:description" content="{{ utmBuilder[locale].meta.twitterDescription }}">
    <meta name="twitter:image" content="{{ site.baseUrl }}/frontend/images/Banner_Serpmonn.png">

    <!-- Каноническая ссылка -->
    <link rel="canonical" href="{{ canonical }}" />

    <!-- Hreflang для всех языков -->
    {% for loc in locales %}
        {% if loc == 'ru' %}
            <link rel="alternate" href="{{ site.baseUrl }}/frontend/tools/marketing/utm-builder.html" hreflang="{{ loc }}" />
        {% else %}
            <link rel="alternate" href="{{ site.baseUrl }}/frontend/{{ loc }}/tools/marketing/utm-builder.html" hreflang="{{ loc }}" />
        {% endif %}
    {% endfor %}
    <link rel="alternate" href="{{ site.baseUrl }}/frontend/tools/marketing/utm-builder.html" hreflang="x-default" />

    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    <link rel="stylesheet" href="/frontend/styles/base.css">
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    <link rel="stylesheet" href="/frontend/styles/menu.css">
    
    <style>
      /* ad top adaptive start */
      .ad-top-banner .mrg-tag { width: 970px !important; height: 250px !important; }
      @media (max-width: 1199px) { .ad-top-banner .mrg-tag { width: 728px !important; height: 90px !important; } }
      @media (max-width: 768px) { .ad-top-banner .mrg-tag { width: 320px !important; height: 50px !important; } }
      /* ad top adaptive end */
      
      body { max-width: 960px; margin: 0 auto; padding: 16px; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
      h1 { margin: 16px 0; }
      .row { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
      label { font-size: 14px; color: #374151; }
      input { width: 100%; padding: 10px; border: 1px solid #e5e7eb; border-radius: 8px; }
      .box { border: 1px solid #e5e7eb; border-radius: 10px; padding: 16px; margin: 12px 0; }
      .actions { display: flex; gap: 8px; }
      button { padding: 10px 12px; border-radius: 8px; border: 1px solid #111827; background: #111827; color: #fff; }
      .muted { color: #6b7280; font-size: 13px; }
      .output { font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace; word-break: break-all; }

      /* RTL поддержка */
      {% if dir == 'rtl' %}
      body, input, label, .muted, .output { text-align: right; direction: rtl; }
      .actions { flex-direction: row-reverse; }
      {% endif %}

      /* Адаптивность для мобильных устройств */
      @media (max-width: 768px) {
        .row { grid-template-columns: 1fr; }
        body { padding: 12px; }
      }
    </style>
  </head>
  <body>
    <!-- Меню -->
    <div id="menuContainer"></div>
    
    <script async src="https://ad.mail.ru/static/ads-async.js"></script>
    <div class="ad-top-banner" style="text-align:center;margin:16px 0;">
      <ins class="mrg-tag" 
          style="display:inline-block;"
          data-ad-client="ad-1897960" 
          data-ad-slot="1897960">
      </ins>
    </div>
    <script>
      (MRGtag = window.MRGtag || []).push({});
    </script>
    
    <h1>{{ utmBuilder[locale].page.title }}</h1>
    
    <!-- Форма параметров UTM -->
    <div class="box">
      <div class="row">
        <div>
          <label>{{ utmBuilder[locale].page.fields.baseUrl }}</label>
          <input id="base" placeholder="{{ utmBuilder[locale].page.placeholders.baseUrl }}" />
        </div>
        <div>
          <label>utm_source</label>
          <input id="source" placeholder="{{ utmBuilder[locale].page.placeholders.source }}" />
        </div>
        <div>
          <label>utm_medium</label>
          <input id="medium" placeholder="{{ utmBuilder[locale].page.placeholders.medium }}" />
        </div>
        <div>
          <label>utm_campaign</label>
          <input id="campaign" placeholder="{{ utmBuilder[locale].page.placeholders.campaign }}" />
        </div>
        <div>
          <label>utm_content</label>
          <input id="content" placeholder="{{ utmBuilder[locale].page.placeholders.content }}" />
        </div>
        <div>
          <label>utm_term</label>
          <input id="term" placeholder="{{ utmBuilder[locale].page.placeholders.term }}" />
        </div>
      </div>
    </div>
    
    <!-- Действия и вывод результата -->
    <div class="box">
      <div class="actions">
        <button id="build">{{ utmBuilder[locale].page.buttons.generate }}</button>
        <button id="copy" type="button">{{ utmBuilder[locale].page.buttons.copy }}</button>
      </div>
      <p class="muted">{{ utmBuilder[locale].page.generatedLink }}</p>
      <div id="result" class="output"></div>
    </div>

    <script>
      // Вспомогательный селектор
      const qs = (s)=>document.querySelector(s);
      
      // Формирование ссылки с UTM‑параметрами
      function buildUrl() {
        const base = qs('#base').value.trim();
        const params = new URLSearchParams();
        const add = (k,v)=>{ if (v && v.trim()) params.set(k, v.trim()); };
        add('utm_source', qs('#source').value);
        add('utm_medium', qs('#medium').value);
        add('utm_campaign', qs('#campaign').value);
        add('utm_content', qs('#content').value);
        add('utm_term', qs('#term').value);
        if (!base) return '';
        const hasQuery = base.includes('?');
        return base + (hasQuery ? '&' : '?') + params.toString();
      }
      
      // Кнопка генерации
      qs('#build').addEventListener('click', ()=>{
        qs('#result').textContent = buildUrl();
      });
      
      // Копирование результата в буфер обмена
      qs('#copy').addEventListener('click', async ()=>{
        const str = qs('#result').textContent;
        if (!str) return;
        try { 
          await navigator.clipboard.writeText(str); 
          // Опционально: показать уведомление о копировании
          const originalText = qs('#copy').textContent;
          qs('#copy').textContent = "{{ utmBuilder[locale].page.buttons.copied }}";
          setTimeout(() => {
            qs('#copy').textContent = originalText;
          }, 1500);
        } catch(err) {
          console.error('Failed to copy: ', err);
        }
      });
    </script>
    
    <!-- Загрузка меню -->
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
    
    <!-- Мобильная реклама -->
    <div id="mobile-anchor-ad" class="mobile-anchor-ad" style="position:fixed;left:0;right:0;bottom:0;display:none;justify-content:center;z-index:2147483000;padding-bottom: env(safe-area-inset-bottom);pointer-events:none;">
      <div style="pointer-events:auto;background:rgba(255,255,255,.98);box-shadow:0 -2px 10px rgba(0,0,0,.15);border-radius:8px 8px 0 0;padding:6px 10px;display:flex;gap:8px;align-items:center;">
        <button type="button" aria-label="{{ utmBuilder[locale].ads.closeAria }}" onclick="(function(a){ a.style.display='none'; localStorage.setItem('anchor_closed','1');})(document.getElementById('mobile-anchor-ad'))" style="background:none;border:0;font-size:16px;line-height:1;cursor:pointer">✕</button>
        <ins class="mrg-tag" 
            style="display:inline-block;width:320px;height:50px" 
            data-ad-client="ad-1898031"
            data-ad-slot="1898031">
        </ins>
      </div>
    </div>
    <script>
      (function(){
        if (localStorage.getItem('anchor_closed')==='1') return;
        var w = window.innerWidth || document.documentElement.clientWidth;
        var a = document.getElementById('mobile-anchor-ad');
        if (!a) return;
        if (w <= 768) { a.style.display = "flex"; }
        (window.MRGtag = window.MRGtag || []).push({});
        if (window.visualViewport) {
          visualViewport.addEventListener('resize', function(){
            var h = visualViewport.height;
            a.style.display = (h < window.innerHeight * 0.8) ? "none" : ( (w <= 768) ? "flex" : "none" );
          });
        }
      })();
    </script>

    <script>/*ANCHOR_COLLAPSE*/(function(){
      var a=document.getElementById('mobile-anchor-ad'); if(!a) return;
      setTimeout(function(){ var ins=a.querySelector('ins.mrg-tag'); var has=ins && ins.querySelector('iframe'); if(!has){
        (window.MRGtag=window.MRGtag||[]).push({});
        setTimeout(function(){ var ins2=a.querySelector('ins.mrg-tag'); var has2=ins2 && ins2.querySelector('iframe'); if(!has2){ a.style.display='none'; } }, 2000);
      } }, 2000);
    })();</script>

    <script>/*GLOBAL_AD_HOOK*/(function(){
      function handleIns(ins){
        if (!ins || ins.__handled) return; ins.__handled = true;
        setTimeout(function(){
          var has = !!ins.querySelector("iframe");
          if (!has) { (window.MRGtag=window.MRGtag||[]).push({}); }
          setTimeout(function(){ if (!ins.querySelector("iframe")) { var p=ins.closest(".ad-top-banner,.ad-leaderboard,.promo-ad-inline,#mobile-anchor-ad"); if(p) p.style.display='none'; } }, 2000);
        }, 2000);
      }
      document.querySelectorAll("ins.mrg-tag").forEach(handleIns);
      var mo = new MutationObserver(function(muts){
        muts.forEach(function(m){ m.addedNodes && m.addedNodes.forEach(function(n){ if(n.querySelectorAll){ n.querySelectorAll("ins.mrg-tag").forEach(handleIns); } }); });
      });
      mo.observe(document.documentElement,{childList:true,subtree:true});
    })();</script>
    
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
  </body>
</html>