---
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale == 'ru' %}/frontend/news/articles/cookies-complete-guide.html{% else %}/frontend/{{ locale }}/news/articles/cookies-complete-guide.html{% endif %}"
eleventyComputed:
  title: "{{ cookiesCompleteGuide[locale].meta.title }}"
  description: "{{ cookiesCompleteGuide[locale].meta.description }}"
  canonical: "{% if locale == 'ru' %}{{ site.baseUrl }}/news/articles/cookies-complete-guide.html{% else %}{{ site.baseUrl }}/{{ locale }}/news/articles/cookies-complete-guide.html{% endif %}"
---

{% set t = cookiesCompleteGuide[locale] %}

<!DOCTYPE html>
<html lang="{{ locale }}" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ t.meta.description }}">
    <title>{{ t.meta.title }}</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ t.meta.og_title }}">
    <meta property="og:description" content="{{ t.meta.og_description }}">
    <meta property="og:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">
    <meta property="og:url" content="https://serpmonn.ru{{ page.url | safe }}">
    <meta property="og:type" content="article">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ t.meta.twitter_title }}">
    <meta name="twitter:description" content="{{ t.meta.twitter_description }}">
    <meta name="twitter:image" content="https://serpmonn.ru/frontend/images/Banner_Serpmonn.png">

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{{ t.meta.title }}",
      "datePublished": "2024-10-29",
      "author": {
        "@type": "Organization",
        "name": "Serpmonn"
      },
      "description": "{{ t.meta.description }}",
      "image": "https://serpmonn.ru/frontend/images/Banner_Serpmonn.png",
      "publisher": {
        "@type": "Organization",
        "name": "Serpmonn",
        "logo": {
          "@type": "ImageObject",
          "url": "https://serpmonn.ru/frontend/images/serpmonn.ico"
        }
      }
    }
    </script>

    <!-- Каноническая ссылка -->
    <link rel="canonical" href="https://serpmonn.ru{{ page.url | safe }}" />
    
    <!-- Hreflang для всех языков -->
    {% for loc in locales %}
        {% if loc == 'ru' %}
            <link rel="alternate" href="https://serpmonn.ru/frontend/news/articles/cookies-complete-guide.html" hreflang="{{ loc }}" />
        {% else %}
            <link rel="alternate" href="https://serpmonn.ru/frontend/{{ loc }}/news/articles/cookies-complete-guide.html" hreflang="{{ loc }}" />
        {% endif %}
    {% endfor %}
    <link rel="alternate" href="https://serpmonn.ru/frontend/news/articles/cookies-complete-guide.html" hreflang="x-default" />

    <!-- Иконка -->
    <link rel="icon" href="/frontend/images/serpmonn.ico" type="image/x-icon">
    
    <!-- Основные стили -->
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    <link rel="stylesheet" href="/frontend/styles/base.css">
    <link rel="stylesheet" href="/frontend/styles/accessibility.css">
    <link rel="stylesheet" href="/frontend/styles/menu.css" media="print" onload="this.media='all'">
    
    <!-- Стили для этой статьи -->
    <link rel="stylesheet" href="/frontend/styles/articles/cookies-guide.css">
    
    <!-- Внешние библиотеки -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Скрипт меню -->
    <script type="module" src="/frontend/scripts/menu-loader.js" defer></script>
</head>
<body>
    <div class="reading-progress">
        <div class="reading-progress-bar"></div>
    </div>
    
    <button class="toc-toggle" onclick="toggleFloatingToc()">
        <i class="fas fa-list"></i>
    </button>
    
    <div class="floating-toc">
        <h3>{{ t.toc.title }}</h3>
        <ul>
            <li><a href="#section-what-is">{{ t.toc.items[0] }}</a></li>
            <li><a href="#section-how-work">{{ t.toc.items[1] }}</a></li>
            <li><a href="#section-types">{{ t.toc.items[2] }}</a></li>
            <li><a href="#section-why-clean">{{ t.toc.items[3] }}</a></li>
            <li><a href="#section-how-clean">{{ t.toc.items[4] }}</a></li>
            <li><a href="#section-manage">{{ t.toc.items[5] }}</a></li>
            <li><a href="#section-security">{{ t.toc.items[6] }}</a></li>
            <li><a href="#section-faq">{{ t.toc.items[7] }}</a></li>
        </ul>
    </div>
    
    <div id="menuContainer"></div>
    
    <article class="article-container" tabindex="0">
        <header class="article-header">
            <span class="article-category">{{ t.article.category }}</span>
            <div class="table-of-contents sticky-toc">
                <h2>{{ t.toc.title }}</h2>
                <ul>
                    <li><a href="#section-what-is">{{ t.toc.items[0] }}</a></li>
                    <li><a href="#section-how-work">{{ t.toc.items[1] }}</a></li>
                    <li><a href="#section-types">{{ t.toc.items[2] }}</a></li>
                    <li><a href="#section-why-clean">{{ t.toc.items[3] }}</a></li>
                    <li><a href="#section-how-clean">{{ t.toc.items[4] }}</a></li>
                    <li><a href="#section-manage">{{ t.toc.items[5] }}</a></li>
                    <li><a href="#section-security">{{ t.toc.items[6] }}</a></li>
                    <li><a href="#section-faq">{{ t.toc.items[7] }}</a></li>
                </ul>
            </div>
            <div class="ad-top-banner ad-banner loading">
                <ins class="mrg-tag" style="display:inline-block;" data-ad-client="ad-1897960" data-ad-slot="1897960"></ins>
            </div>
            <h1 class="article-title">{{ t.article.title }}</h1>
            <div class="article-meta">{{ t.article.date }} • {{ t.article.reading_time }}</div>
        </header>

        <div class="article-content">
            <p>{{ t.article.intro }}</p>

            <!-- Что такое куки -->
            <h2 id="section-what-is">{{ t.sections.what_is.title }}</h2>
            <p>{{ t.sections.what_is.content | safe }}</p>
            
            <div class="analogy-box">
                <h4>{{ t.sections.what_is.analogy.title }}</h4>
                <p>{{ t.sections.what_is.analogy.content }}</p>
            </div>

            <div class="visual-guide">
                {% for item in t.sections.what_is.visual_items %}
                <div class="visual-item">
                    <div class="visual-icon"><i class="{{ item.icon }}"></i></div>
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>

            <!-- Как работают куки -->
            <h2 id="section-how-work">{{ t.sections.how_work.title }}</h2>
            
            <ol class="step-list">
                {% for step in t.sections.how_work.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.content }}</p>
                </li>
                {% endfor %}
            </ol>

            <div class="code-example">
                <h4>{{ t.sections.how_work.code_example.title }}</h4>
                <pre><code class="language-json">{{ t.sections.how_work.code_example.code }}</code></pre>
            </div>

            <!-- Типы куки -->
            <h2 id="section-types">{{ t.sections.types.title }}</h2>
            
            <table class="cookies-table">
                <thead>
                    <tr>
                        {% for header in t.sections.types.table.headers %}
                        <th>{{ header | safe }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in t.sections.types.table.rows %}
                    <tr>
                        {% for cell in row %}
                        <td>{{ cell | safe }}</td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="privacy-warning">
                <h4>{{ t.sections.types.warning.title }}</h4>
                <p>{{ t.sections.types.warning.content }}</p>
            </div>

            <!-- Зачем чистить куки -->
            <h2 id="section-why-clean">{{ t.sections.why_clean.title }}</h2>

            <div class="visual-guide">
                {% for item in t.sections.why_clean.visual_items %}
                <div class="visual-item">
                    <div class="visual-icon"><i class="{{ item.icon }}"></i></div>
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.description }}</p>
                </div>
                {% endfor %}
            </div>

            <h3>{{ t.sections.why_clean.situations.title }}</h3>
            <ul>
                {% for item in t.sections.why_clean.situations.items %}
                <li>{{ item | safe }}</li>
                {% endfor %}
            </ul>

            <!-- Как очистить куки -->
            <h2 id="section-how-clean">{{ t.sections.how_clean.title }}</h2>

            {% for browser in t.sections.how_clean.browsers %}
            <div class="browser-guide">
                <h4>{{ browser.title }}</h4>
                <ol>
                    {% for step in browser.steps %}
                    <li>{{ step | safe }}</li>
                    {% endfor %}
                </ol>
            </div>
            {% endfor %}

            <div class="security-tip">
                <h4>{{ t.sections.how_clean.tip.title }}</h4>
                <p>{{ t.sections.how_clean.tip.content }}</p>
            </div>

            <h3>{{ t.sections.how_clean.shortcuts.title }}</h3>
            <ul>
                {% for item in t.sections.how_clean.shortcuts.items %}
                <li>{{ item | safe }}</li>
                {% endfor %}
            </ul>

            <!-- Управление куки -->
            <h2 id="section-manage">{{ t.sections.manage.title }}</h2>

            <ol class="step-list">
                {% for step in t.sections.manage.steps %}
                <li>
                    <h3>{{ step.title }}</h3>
                    <p>{{ step.content }}</p>
                </li>
                {% endfor %}
            </ol>

            <div class="security-tip">
                <h4>{{ t.sections.manage.extensions.title }}</h4>
                <ul>
                    {% for item in t.sections.manage.extensions.items %}
                    <li>{{ item | safe }}</li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Безопасность -->
            <h2 id="section-security">{{ t.sections.security.title }}</h2>

            <div class="privacy-warning">
                <h4>{{ t.sections.security.attacks.title }}</h4>
                <ul>
                    {% for item in t.sections.security.attacks.items %}
                    <li>{{ item | safe }}</li>
                    {% endfor %}
                </ul>
            </div>

            <h3>{{ t.sections.security.protection.title }}</h3>
            
            <table class="cookies-table">
                <thead>
                    <tr>
                        {% for header in t.sections.security.protection.table.headers %}
                        <th>{{ header | safe }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in t.sections.security.protection.table.rows %}
                    <tr>
                        {% for cell in row %}
                        <td>{{ cell | safe }}</td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <h3>{{ t.sections.security.checklist.title }}</h3>
            <ul class="checklist">
                {% for item in t.sections.security.checklist.items %}
                <li>
                    <input type="checkbox" id="security{{ loop.index }}">
                    <label for="security{{ loop.index }}">{{ item }}</label>
                </li>
                {% endfor %}
            </ul>

            <!-- Частые вопросы -->
            <h2 id="section-faq">{{ t.sections.faq.title }}</h2>

            {% for qa in t.sections.faq.questions %}
            <div class="browser-guide">
                <h4>{{ qa.question }}</h4>
                <p>{{ qa.answer | safe }}</p>
            </div>
            {% endfor %}

            <!-- Выводы -->
            <h3>{{ t.sections.conclusions.title }}</h3>
            <ul>
                {% for item in t.sections.conclusions.items %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>

            <!-- Кнопки поделиться -->
            <div class="share-buttons">
                <h3>{{ t.ui.share.title }}</h3>
                <button onclick="share('telegram')" aria-label="{{ t.ui.share.telegram }}">{{ t.ui.share.telegram }}</button>
                <button onclick="share('vk')" aria-label="{{ t.ui.share.vk }}">{{ t.ui.share.vk }}</button>
            </div>

            <!-- Комментарии -->
            <div class="comments-section">
                <h2>{{ t.ui.comments.title }}</h2>
                <div class="comment-form">
                    <h3>{{ t.ui.comments.form_title }}</h3>
                    <form id="commentForm">
                        <div class="form-group">
                            <label for="commentName">{{ t.ui.comments.name_label }}</label>
                            <input type="text" id="commentName" required>
                        </div>
                        <div class="form-group">
                            <label for="commentText">{{ t.ui.comments.comment_label }}</label>
                            <textarea id="commentText" required></textarea>
                        </div>
                        <button type="submit" class="submit-button">{{ t.ui.comments.submit }}</button>
                    </form>
                </div>
                <div id="commentsList" class="comments-list">
                    <!-- Комментарии будут загружены здесь -->
                </div>
            </div>
        </div>

        <!-- Социальные кнопки -->
        <div class="social-subscribe">
            <a class="tg-btn" href="https://t.me/serpmonn" target="_blank" rel="noopener" aria-label="{{ t.ui.social.telegram }}">{{ t.ui.social.telegram }}</a>
            <a class="vk-btn" href="https://vk.com/serpmonn_site" target="_blank" rel="noopener" aria-label="{{ t.ui.social.vk }}">{{ t.ui.social.vk }}</a>
        </div>
    </article>

    <!-- Кнопка наверх -->
    <button class="scroll-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="{{ t.ui.scroll_top }}">{{ t.ui.scroll_top }}</button>

    <!-- Мобильная реклама -->
    <div id="mobile-anchor-ad" class="mobile-anchor-ad ad-banner loading" style="position:fixed;left:0;right:0;bottom:0;display:none;justify-content:center;z-index:2147483000;padding-bottom:env(safe-area-inset-bottom);pointer-events:none">
        <div style="pointer-events:auto;background:rgba(255,255,255,.98);box-shadow:0 -2px 10px rgba(0,0,0,.15);border-radius:8px 8px 0 0;padding:6px 10px;display:flex;gap:8px;align-items:center">
            <button type="button" aria-label="Закрыть рекламу" onclick="this.closest('.mobile-anchor-ad').style.display='none';localStorage.setItem('anchor_closed','1')" style="background:none;border:0;font-size:16px;line-height:1;cursor:pointer">✕</button>
            <ins class="mrg-tag" style="display:inline-block;width:320px;height:50px" data-ad-client="ad-1898031" data-ad-slot="1898031"></ins>
        </div>
    </div>

    <!-- Внешние библиотеки -->
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    
    <!-- JavaScript для статьи -->
    <script>
        // Функции для работы с комментариями
        function saveComment(name, text) {
            const comment = {
                name: name,
                text: text,
                date: new Date().toLocaleString('{{ locale }}')
            };
            
            let comments = JSON.parse(localStorage.getItem('articleComments')) || [];
            comments.push(comment);
            localStorage.setItem('articleComments', JSON.stringify(comments));
            
            return comment;
        }
        
        function loadComments() {
            const comments = JSON.parse(localStorage.getItem('articleComments')) || [];
            const commentsList = document.getElementById('commentsList');
            
            if (comments.length === 0) {
                commentsList.innerHTML = '<div class="no-comments">{{ t.ui.comments.no_comments }}</div>';
                return;
            }
            
            commentsList.innerHTML = comments.map(comment => `
                <div class="comment">
                    <div class="comment-header">
                        <span class="comment-author">${escapeHtml(comment.name)}</span>
                        <span class="comment-date">${escapeHtml(comment.date)}</span>
                    </div>
                    <div class="comment-text">${escapeHtml(comment.text)}</div>
                </div>
            `).join('');
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Основные функции
        function toggleFloatingToc() {
            const floatingToc = document.querySelector('.floating-toc');
            floatingToc.style.display = floatingToc.style.display === 'block' ? 'none' : 'block';
        }
        
        function share(network) {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent(document.title);
            const shareUrls = {
                telegram: `https://t.me/share/url?url=${url}&text=${title}`,
                vk: `https://vk.com/share.php?url=${url}&title=${title}`
            };
            window.open(shareUrls[network], '_blank');
        }
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Загрузка комментариев
            loadComments();
            
            // Обработка формы комментариев
            document.getElementById('commentForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const nameInput = document.getElementById('commentName');
                const textInput = document.getElementById('commentText');
                
                const name = nameInput.value.trim();
                const text = textInput.value.trim();
                
                if (name && text) {
                    saveComment(name, text);
                    loadComments();
                    
                    // Очистка формы
                    nameInput.value = '';
                    textInput.value = '';
                }
            });
            
            // Анимация появления контента
            const contentObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.article-content > *').forEach(el => contentObserver.observe(el));
            
            // Кнопка "Наверх"
            window.addEventListener('scroll', () => {
                const button = document.querySelector('.scroll-to-top');
                button.classList.toggle('show', window.scrollY > 300);
            });
            
            // Прогресс чтения
            const progressBar = document.querySelector('.reading-progress-bar');
            window.addEventListener('scroll', () => {
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const scrollTop = window.scrollY;
                const progress = (scrollTop / (documentHeight - windowHeight)) * 100;
                progressBar.style.width = `${progress}%`;
            });
            
            // Показывать плавающее оглавление на десктопах
            if (window.innerWidth > 991) {
                document.querySelector('.floating-toc').style.display = 'block';
            }
            
            // Управление рекламой
            document.querySelectorAll('.mrg-tag').forEach(ad => {
                const banner = ad.closest('.ad-banner');
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const script = document.createElement('script');
                            script.src = 'https://ad.mail.ru/static/ads-async.js';
                            script.async = true;
                            document.head.appendChild(script);
                            (window.MRGtag = window.MRGtag || []).push({});
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });
                observer.observe(ad);
                
                const mutationObserver = new MutationObserver(() => {
                    let attempts = 0;
                    const maxAttempts = 5;
                    const interval = setInterval(() => {
                        if (!ad.hasChildNodes() || ad.innerHTML.trim() === '') {
                            if (attempts >= maxAttempts) {
                                banner.classList.add('hidden');
                                banner.classList.remove('loading');
                                clearInterval(interval);
                            }
                        } else {
                            banner.classList.remove('loading');
                            clearInterval(interval);
                        }
                        attempts++;
                    }, 1000);
                });
                mutationObserver.observe(ad, { childList: true, subtree: true });
            });
            
            // Мобильная реклама
            if (localStorage.getItem('anchor_closed') !== '1') {
                const w = window.innerWidth || document.documentElement.clientWidth;
                const a = document.getElementById('mobile-anchor-ad');
                if (a && w <= 768) {
                    a.style.display = 'flex';
                }
                if (window.visualViewport) {
                    visualViewport.addEventListener('resize', () => {
                        const h = visualViewport.height;
                        a.style.display = (h < window.innerHeight * 0.8) ? 'none' : (w <= 768 ? 'flex' : 'none');
                    });
                }
            }
        });
    </script>
    <script src="/frontend/scripts/mobile-enhancements.js" defer></script>
</body>
</html>